<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingBottom="100dp"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="24dp">

            <!-- HEADER -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="20dp"
                android:paddingTop="20dp"
                android:paddingEnd="20dp"
                android:paddingBottom="12dp"
                android:gravity="center_vertical">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/btnBack"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@color/white"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_flechaatras"
                        android:contentDescription="Volver"
                        app:tint="#1A1A1A" />
                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Modificar Perfil"
                    android:textColor="#1A1A1A"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginStart="-40dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:gravity="center_horizontal">

                <!-- AVATAR -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    app:cardCornerRadius="60dp"
                    app:cardElevation="4dp"
                    app:strokeWidth="2dp"
                    app:strokeColor="@color/white">

                    <ImageView
                        android:id="@+id/iv_avatar_completar"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_avatar_default"
                        android:contentDescription="Foto de perfil"/>
                </com.google.android.material.card.MaterialCardView>

                <!-- ========================================
     DATOS ACTUALES (CON CORREO Y TELÉFONO)
     ======================================== -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="@color/white">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Datos Actuales (Referencia)"
                            android:textColor="#1A1A1A"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="16dp"/>

                        <!-- FILA 1: Costo y Tipo Cuenta -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="12dp">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:background="@drawable/fondo_campos_perfil"
                                android:padding="12dp"
                                android:layout_marginEnd="8dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Costo Mensualidad"
                                    android:textColor="#9CA3AF"
                                    android:textSize="11sp"
                                    android:textStyle="bold"/>

                                <TextView
                                    android:id="@+id/tvCostoActual"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="#1A1A1A"
                                    android:textSize="15sp"
                                    android:layout_marginTop="4dp" />
                            </LinearLayout>

                        </LinearLayout>

                        <!-- ✅ FILA 2: Correo y Teléfono -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="12dp"/>

                        <!-- FILA 3: Deportes y Límite Alumnos -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="12dp">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:background="@drawable/fondo_campos_perfil"
                                android:padding="12dp"
                                android:layout_marginEnd="8dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Deportes"
                                    android:textColor="#9CA3AF"
                                    android:textSize="11sp"
                                    android:textStyle="bold"/>

                                <TextView
                                    android:id="@+id/tvDeportesActual"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="#1A1A1A"
                                    android:textSize="15sp"
                                    android:layout_marginTop="4dp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:background="@drawable/fondo_campos_perfil"
                                android:padding="12dp"
                                android:layout_marginStart="8dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Límite Alumnos"
                                    android:textColor="#9CA3AF"
                                    android:textSize="11sp"
                                    android:textStyle="bold"/>

                                <TextView
                                    android:id="@+id/tvLimiteAlumnosActual"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="#1A1A1A"
                                    android:textSize="15sp"
                                    android:layout_marginTop="4dp" />
                            </LinearLayout>
                        </LinearLayout>

                        <!-- FILA 4: Descripción -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:background="@drawable/fondo_campos_perfil"
                            android:padding="12dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Descripción del Perfil"
                                android:textColor="#9CA3AF"
                                android:textSize="11sp"
                                android:textStyle="bold"/>

                            <TextView
                                android:id="@+id/tvDescripcionActual"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="#1A1A1A"
                                android:textSize="15sp"
                                android:layout_marginTop="4dp" />
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
                <!-- TÍTULO MODIFICAR -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Modificar Perfil"
                    android:textColor="#1A1A1A"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Dejar vacío si no deseas modificar el campo."
                    android:textColor="#6B7280"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:layout_marginBottom="24dp"/>

                <!-- ========================================
                     CAMPOS EDITABLES
                     ======================================== -->

                <!-- COSTO -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Costo de mensualidad"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    app:prefixText="$"
                    app:boxStrokeColor="#00A896"
                    android:layout_marginBottom="16dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etCostoNuevo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:textColor="#1A1A1A"
                        android:textSize="14sp"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- ✅ SPINNER DE LÍMITE (SOLO SI ES PREMIUM) -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/layoutLimiteAlumnos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Límite de Alumnos"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                    app:boxStrokeColor="#00A896"
                    android:layout_marginBottom="16dp"
                    android:visibility="gone">

                    <AutoCompleteTextView
                        android:id="@+id/spinnerLimiteAlumnos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        android:textColor="#1A1A1A"
                        android:textSize="14sp"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- DESCRIPCIÓN -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Descripción del perfil (máx. 250 caracteres)"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    app:boxStrokeColor="#00A896"
                    app:counterEnabled="true"
                    app:counterMaxLength="250"
                    android:layout_marginBottom="30dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etDescripcionNuevo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="top"
                        android:lines="4"
                        android:maxLength="250"
                        android:inputType="textMultiLine"
                        android:textColor="#1A1A1A"
                        android:textSize="14sp"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- BOTÓN ACTUALIZAR -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnActualizar"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Actualizar Perfil"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:cornerRadius="16dp"
                    app:backgroundTint="#00A896"
                    app:elevation="4dp"
                    android:textAllCaps="false"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>