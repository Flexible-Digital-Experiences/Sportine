<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_ejercicio"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/spacing_medium"
    app:cardCornerRadius="@dimen/corner_radius_card"
    app:cardElevation="0dp"
    app:strokeWidth="0dp"
    android:backgroundTint="@color/colorCardBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/spacing_large"
        android:paddingBottom="@dimen/spacing_large"
        android:paddingStart="@dimen/spacing_medium"
        android:paddingEnd="@dimen/spacing_medium">

        <!-- Barra de color lateral izquierda -->
        <View
            android:id="@+id/view_accent_bar"
            android:layout_width="4dp"
            android:layout_height="0dp"
            android:background="@color/colorAccent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <!-- Número del ejercicio -->
        <TextView
            android:id="@+id/text_numero_ejercicio"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/bg_circle_accent"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:layout_marginStart="@dimen/spacing_medium"
            app:layout_constraintStart_toEndOf="@id/view_accent_bar"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="1" />

        <!-- Contenido principal -->
        <LinearLayout
            android:id="@+id/layout_contenido"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="@dimen/spacing_medium"
            android:layout_marginEnd="@dimen/spacing_xsmall"
            app:layout_constraintStart_toEndOf="@id/text_numero_ejercicio"
            app:layout_constraintEnd_toStartOf="@id/layout_acciones"
            app:layout_constraintTop_toTopOf="parent">

            <!-- Nombre del ejercicio -->
            <TextView
                android:id="@+id/text_nombre_ejercicio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/colorTextPrimary"
                android:fontFamily="sans-serif-medium"
                tools:text="Sentadillas con peso" />

            <!-- Detalles del ejercicio -->
            <LinearLayout
                android:id="@+id/layout_detalles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/spacing_small">

                <!-- Series -->
                <LinearLayout
                    android:id="@+id/layout_series"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:visibility="gone"
                    tools:visibility="visible">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_series"
                        android:contentDescription="Series" />

                    <TextView
                        android:id="@+id/text_series"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:textSize="14sp"
                        android:textColor="@color/colorTextSecondary"
                        tools:text="3 series" />
                </LinearLayout>

                <!-- Repeticiones -->
                <LinearLayout
                    android:id="@+id/layout_repeticiones"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginStart="@dimen/spacing_medium"
                    android:visibility="gone"
                    tools:visibility="visible">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_repeticiones"
                        android:contentDescription="Repeticiones" />

                    <TextView
                        android:id="@+id/text_repeticiones"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:textSize="14sp"
                        android:textColor="@color/colorTextSecondary"
                        tools:text="12 reps" />
                </LinearLayout>
            </LinearLayout>

            <!-- Segunda línea de detalles -->
            <LinearLayout
                android:id="@+id/layout_detalles_secundarios"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/spacing_xsmall">

                <!-- Peso -->
                <LinearLayout
                    android:id="@+id/layout_peso"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:visibility="gone"
                    tools:visibility="visible">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_peso"
                        android:contentDescription="Peso" />

                    <TextView
                        android:id="@+id/text_peso"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:textSize="14sp"
                        android:textColor="@color/colorTextSecondary"
                        tools:text="50 kg" />
                </LinearLayout>

                <!-- Duración -->
                <LinearLayout
                    android:id="@+id/layout_duracion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginStart="@dimen/spacing_medium"
                    android:visibility="gone"
                    tools:visibility="visible">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_duracion"
                        android:contentDescription="Duración" />

                    <TextView
                        android:id="@+id/text_duracion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:textSize="14sp"
                        android:textColor="@color/colorTextSecondary"
                        tools:text="30 min" />
                </LinearLayout>

                <!-- Distancia -->
                <LinearLayout
                    android:id="@+id/layout_distancia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginStart="@dimen/spacing_medium"
                    android:visibility="gone"
                    tools:visibility="visible">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_distancia"
                        android:contentDescription="Distancia" />

                    <TextView
                        android:id="@+id/text_distancia"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:textSize="14sp"
                        android:textColor="@color/colorTextSecondary"
                        tools:text="5 km" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <!-- Botones de acción -->
        <LinearLayout
            android:id="@+id/layout_acciones"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <!-- Botón Editar -->
            <ImageButton
                android:id="@+id/btn_editar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_edit"
                android:contentDescription="Editar ejercicio"
                app:tint="@color/colorTextSecondary" />

            <!-- Botón Eliminar -->
            <ImageButton
                android:id="@+id/btn_eliminar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="@dimen/spacing_xsmall"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_delete"
                android:contentDescription="Eliminar ejercicio"
                app:tint="@color/colorError" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>