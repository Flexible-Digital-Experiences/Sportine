<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:strokeWidth="1dp"
    android:id="@+id/item_buscar_calentrenador"
    app:strokeColor="#E5E7EB"
    android:backgroundTint="#FFFFFF">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/image_entrenador"
            android:layout_width="85dp"
            android:layout_height="82dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/CircularImageView"
            app:strokeColor="#E0E0E0"
            app:strokeWidth="2dp"
            tools:src="@tools:sample/avatars" />

        <LinearLayout
            android:id="@+id/layout_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="8dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toStartOf="@id/indicador_estado"
            app:layout_constraintStart_toEndOf="@id/image_entrenador"
            app:layout_constraintTop_toTopOf="parent">

            <!-- Nombre del entrenador -->
            <TextView
                android:id="@+id/text_nombre_entrenador"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="#111827"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="Entrenador" />

            <!-- Calificación con estrellas -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <RatingBar
                    android:id="@+id/rating_entrenador"
                    style="@style/Widget.AppCompat.RatingBar.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:rating="0"
                    android:stepSize="0.5"
                    android:isIndicator="true"
                    android:progressTint="#FCD34D"
                    android:progressBackgroundTint="#E5E7EB"
                    android:secondaryProgressTint="#FCD34D" />

                <TextView
                    android:id="@+id/text_calificacion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    tools:text="4.5"
                    android:textColor="#6B7280"
                    android:textSize="13sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Número de alumnos y disponibilidad -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_social_black_24dp"
                    app:tint="#6B7280"
                    android:contentDescription="Alumnos" />

                <TextView
                    android:id="@+id/text_alumnos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:textColor="#6B7280"
                    android:textSize="13sp"
                    tools:text="15/20 alumnos" />

                <!-- Badge de disponibilidad -->
                <TextView
                    android:id="@+id/badge_disponibilidad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/badge_disponible"
                    android:paddingStart="8dp"
                    android:paddingTop="2dp"
                    android:paddingEnd="8dp"
                    android:paddingBottom="2dp"
                    android:textColor="#059669"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:visibility="gone"
                    tools:text="5 espacios"
                    tools:visibility="visible" />
            </LinearLayout>

            <!-- Deportes que imparte -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_ensena"
                    app:tint="#6B7280"
                    android:contentDescription="Deportes" />

                <TextView
                    android:id="@+id/text_deportes"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"
                    android:textColor="#6B7280"
                    android:textSize="13sp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    tools:text="Fútbol, Basketball" />
            </LinearLayout>

        </LinearLayout>

        <!-- Indicador de estado (verde = disponible, amarillo = casi lleno) -->
        <View
            android:id="@+id/indicador_estado"
            android:layout_width="4dp"
            android:layout_height="0dp"
            android:background="#10B981"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>