<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA">

    <!-- Header -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Solicitudes de Alumnos"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#1A1A1A"
        android:layout_marginStart="20dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnVerMisAlumnos" />

    <!-- Botón Ver Mis Alumnos (esquina superior derecha) -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnVerMisAlumnos"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ver Alumnos"
        android:textColor="#2196F3"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="20dp"
        app:icon="@drawable/ic_group"
        app:iconTint="#2196F3"
        app:iconGravity="textStart"
        app:iconPadding="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- RecyclerView for Solicitudes -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvSolicitudes"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="16dp"
        android:clipToPadding="false"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/item_solicitud_alumno"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintBottom_toTopOf="@id/layoutBottomButtons"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Empty State -->
    <LinearLayout
        android:id="@+id/emptyStateLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        tools:visibility="visible"
        app:layout_constraintTop_toTopOf="@id/rvSolicitudes"
        app:layout_constraintBottom_toBottomOf="@id/rvSolicitudes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/imagen_noenco"
            android:layout_width="300dp"
            android:layout_height="300dp"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/buscar" />

        <TextView
            android:id="@+id/tvEmptyState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No hay solicitudes nuevas"
            android:textSize="16sp"
            android:textColor="#9CA3AF"
            android:layout_marginTop="16dp" />

    </LinearLayout>

    <!-- Bottom Buttons Container -->
    <LinearLayout
        android:id="@+id/layoutBottomButtons"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:layout_marginBottom="100dp"
        android:background="@android:color/white"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Botón Rechazar -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRechazar"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:text="RECHAZAR"
            android:textColor="#EF4444"
            android:textSize="15sp"
            android:textStyle="bold"
            app:strokeColor="#EF4444"
            app:strokeWidth="2dp"
            android:layout_marginEnd="8dp"
            app:cornerRadius="12dp"
            app:icon="@drawable/ic_close"
            app:iconTint="#EF4444"
            app:iconGravity="textStart"
            app:iconPadding="8dp" />

        <!-- Botón Aceptar -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAceptar"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:text="ACEPTAR"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:textStyle="bold"
            android:backgroundTint="#2196F3"
            android:layout_marginStart="8dp"
            app:cornerRadius="12dp"
            app:icon="@drawable/ic_check"
            app:iconTint="@android:color/white"
            app:iconGravity="textStart"
            app:iconPadding="8dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>