<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPageBackground"
    android:fillViewport="true"
    tools:context=".ui.usuarios.home.HomeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/spacing_xlarge"
        android:paddingEnd="@dimen/spacing_xlarge"
        android:paddingTop="@dimen/spacing_large"
        android:paddingBottom="@dimen/spacing_xxlarge">

        <!-- Tarjeta de bienvenida -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_bienvenida"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/corner_radius_card"
            app:cardElevation="0dp"
            app:strokeWidth="0dp"
            app:cardBackgroundColor="@color/colorCardBackground"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/spacing_xlarge">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_logo"
                    android:layout_width="@dimen/avatar_size"
                    android:layout_height="@dimen/avatar_size"
                    app:cardCornerRadius="@dimen/corner_radius_avatar"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/colorIconBackground"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent">

                    <ImageView
                        android:id="@+id/img_logo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/logo_sportine"
                        android:contentDescription="@string/descripcion_logo"
                        android:padding="@dimen/icon_padding"
                        android:scaleType="fitCenter" />
                </com.google.android.material.card.MaterialCardView>

                <LinearLayout
                    android:id="@+id/layout_texto_bienvenida"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="@dimen/spacing_large"
                    app:layout_constraintStart_toEndOf="@id/card_logo"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/card_logo"
                    app:layout_constraintBottom_toBottomOf="@id/card_logo">

                    <!-- Saludo dinámico desde backend: "Hola de nuevo, [nombre]!" -->
                    <TextView
                        android:id="@+id/text_saludo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/font_size_headline"
                        android:textStyle="bold"
                        android:textColor="@color/colorTextPrimary"
                        android:fontFamily="sans-serif-medium" />

                    <!-- Mensaje dinámico desde backend -->
                    <TextView
                        android:id="@+id/text_mensaje"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_xsmall"
                        android:textSize="@dimen/font_size_date"
                        android:textColor="@color/colorTextSecondary" />
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Fecha actual -->
        <LinearLayout
            android:id="@+id/layout_fecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/spacing_xxlarge"
            app:layout_constraintTop_toBottomOf="@id/card_bienvenida"
            app:layout_constraintStart_toStartOf="parent">

            <View
                android:layout_width="@dimen/accent_line_width"
                android:layout_height="@dimen/accent_line_height"
                android:background="@color/colorAccent"
                android:layout_marginEnd="@dimen/spacing_small" />

            <!-- Fecha formateada desde backend -->
            <TextView
                android:id="@+id/text_fecha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorTextSecondary"
                android:textSize="@dimen/font_size_date"
                android:fontFamily="sans-serif-medium" />
        </LinearLayout>

        <!-- Título de sección -->
        <TextView
            android:id="@+id/text_entrenamientos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_xlarge"
            android:fontFamily="sans-serif-medium"
            android:text="@string/entrenamientos_title"
            android:textColor="@color/colorTextPrimary"
            android:textSize="@dimen/font_size_page_title"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layout_fecha" />

        <!-- RecyclerView: Se poblará dinámicamente desde backend -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_deportes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_small"
            android:clipToPadding="false"
            android:nestedScrollingEnabled="false"
            android:overScrollMode="never"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_entrenamientos"
            tools:listitem="@layout/item_ejercicio_detalle"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>