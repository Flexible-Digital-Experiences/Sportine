<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    android:fillViewport="true"
    tools:context=".ui.usuarios.home.HomeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="16dp"
        android:paddingBottom="24dp">

        <!-- Tarjeta de bienvenida -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_bienvenida"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp"
            app:strokeWidth="0dp"
            android:backgroundTint="#FFFFFF"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_logo"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    app:cardCornerRadius="32dp"
                    app:cardElevation="0dp"
                    android:backgroundTint="#F0F4FF"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent">

                    <ImageView
                        android:id="@+id/img_logo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/logo_sportine"
                        android:contentDescription="@string/descripcion_logo"
                        android:padding="12dp"
                        android:scaleType="fitCenter" />
                </com.google.android.material.card.MaterialCardView>

                <LinearLayout
                    android:id="@+id/layout_texto_bienvenida"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp"
                    app:layout_constraintStart_toEndOf="@id/card_logo"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/card_logo"
                    app:layout_constraintBottom_toBottomOf="@id/card_logo">

                    <!-- Saludo dinámico desde backend: "Hola de nuevo, [nombre]!" -->
                    <TextView
                        android:id="@+id/text_saludo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#1A1A1A"
                        android:fontFamily="sans-serif-medium" />

                    <!-- Mensaje dinámico desde backend -->
                    <TextView
                        android:id="@+id/text_mensaje"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:textSize="14sp"
                        android:textColor="#6B7280" />
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Fecha actual -->
        <LinearLayout
            android:id="@+id/layout_fecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/card_bienvenida"
            app:layout_constraintStart_toStartOf="parent">

            <View
                android:layout_width="3dp"
                android:layout_height="20dp"
                android:background="#3B82F6"
                android:layout_marginEnd="10dp" />

            <!-- Fecha formateada desde backend -->
            <TextView
                android:id="@+id/text_fecha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#6B7280"
                android:textSize="14sp"
                android:fontFamily="sans-serif-medium" />
        </LinearLayout>

        <!-- Título de sección -->
        <TextView
            android:id="@+id/text_entrenamientos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif-medium"
            android:text="Entrenamientos"
            android:textColor="#1A1A1A"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layout_fecha" />

        <!-- RecyclerView: Se poblará dinámicamente desde backend -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_deportes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:clipToPadding="false"
            android:nestedScrollingEnabled="false"
            android:overScrollMode="never"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_entrenamientos" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>