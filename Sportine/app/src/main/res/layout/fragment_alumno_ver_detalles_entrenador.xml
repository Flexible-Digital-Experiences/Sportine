<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="24dp">

        <!-- Botón de regresar -->
        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Regresar"
            android:src="@drawable/ic_flechaatras"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="#1A1A1A" />

        <!-- Imagen de perfil -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/image_perfil"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="16dp"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_back"
            app:shapeAppearanceOverlay="@style/CircularImageView"
            app:strokeColor="#E0E0E0"
            app:strokeWidth="3dp"
            tools:src="@tools:sample/avatars" />

        <!-- Nombre del entrenador -->
        <TextView
            android:id="@+id/text_nombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="sans-serif-medium"
            tools:text="Carlos Martínez"
            android:textColor="#1A1A1A"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/image_perfil" />

        <!-- Calificación -->
        <LinearLayout
            android:id="@+id/layout_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_nombre">

            <RatingBar
                android:id="@+id/rating_entrenador"
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:isIndicator="true"
                android:numStars="5"
                android:progressBackgroundTint="#E5E7EB"
                android:progressTint="#FCD34D"
                android:rating="4.5"
                android:secondaryProgressTint="#FCD34D"
                android:stepSize="0.5" />

            <TextView
                android:id="@+id/text_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                tools:text="4.5"
                android:textColor="#1A1A1A"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_num_resenas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                tools:text="(10)"
                android:textColor="#6B7280"
                android:textSize="13sp" />
        </LinearLayout>

        <!-- Ubicación -->
        <TextView
            android:id="@+id/text_ubicacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            tools:text="Monterrey, Nuevo León"
            android:textColor="#6B7280"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layout_rating" />

        <!-- Tarjeta: Acerca de mí -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_acerca"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="20dp"
            android:backgroundTint="#FFFFFF"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_ubicacion">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:text="Acerca de mí"
                    android:textColor="#1A1A1A"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text_acerca"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:lineSpacingExtra="4dp"
                    tools:text="Entrenador profesional con 8 años de experiencia..."
                    android:textColor="#4B5563"
                    android:textSize="14sp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Tarjeta: Especialidades -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_especialidades"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="20dp"
            android:backgroundTint="#FFFFFF"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/card_acerca">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:text="Especialidades"
                    android:textColor="#1A1A1A"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <!-- RecyclerView de deportes -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_deportes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:clipToPadding="false"
                    android:orientation="horizontal"
                    android:nestedScrollingEnabled="false"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:itemCount="3"
                    tools:listitem="@layout/item_alumno_deporte_card" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Tarjeta: Lo que mis clientes dicen -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_resenas"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="20dp"
            android:backgroundTint="#FFFFFF"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/card_especialidades">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif-medium"
                        android:text="Lo que mis clientes dicen"
                        android:textColor="#1A1A1A"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <!-- Botón "Ver todas" -->
                    <TextView
                        android:id="@+id/btn_ver_todas"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ver todas"
                        android:textColor="#3B82F6"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:padding="8dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:visibility="gone" />
                </LinearLayout>

                <!-- RecyclerView de reseñas (limitado a 3) -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_resenas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:nestedScrollingEnabled="false"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:itemCount="2"
                    tools:listitem="@layout/item_alumno_resenaentre" />

                <!-- Mensaje cuando no hay reseñas -->
                <TextView
                    android:id="@+id/text_sin_resenas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Este entrenador aún no tiene reseñas"
                    android:textAlignment="center"
                    android:textColor="#9CA3AF"
                    android:textSize="14sp"
                    android:visibility="gone" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- ============================================
             LAYOUT NO DISPONIBLE
             ============================================ -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_no_disponible"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="20dp"
            android:backgroundTint="#FEE2E2"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/card_resenas"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp"
                android:gravity="center">

                <!-- Icono -->
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/stop"
                    app:tint="#DC2626"
                    android:layout_marginBottom="16dp" />

                <!-- Título -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No puedes solicitar este entrenador"
                    android:textColor="#991B1B"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:layout_marginBottom="8dp" />

                <!-- Descripción -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ya tienes entrenadores activos en todos los deportes que este coach ofrece."
                    android:textColor="#7F1D1D"
                    android:textSize="14sp"
                    android:textAlignment="center"
                    android:lineSpacingExtra="4dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Barra inferior con precio y botones -->
        <LinearLayout
            android:id="@+id/layout_bottom_bar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="16dp"
            android:paddingBottom="100dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/card_no_disponible">

            <!-- Costo mensual -->
            <LinearLayout
                android:id="@+id/layout_precio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:paddingBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Costo mensual"
                    android:textColor="#6B7280"
                    android:id="@+id/texto_costo"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/text_precio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    tools:text="$800 MXN"
                    android:textColor="#1A1A1A"
                    android:textSize="24sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- ============================================
                 LAYOUT SIN RELACIÓN
                 ============================================ -->
            <LinearLayout
                android:id="@+id/layout_sin_relacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_enviar_solicitud"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Enviar solicitud"
                    app:cornerRadius="12dp" />

            </LinearLayout>

            <!-- ============================================
                 LAYOUT PENDIENTE (Solicitud aceptada CON deportes disponibles)
                 ============================================ -->
            <LinearLayout
                android:id="@+id/layout_pendiente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="#FFF9E6"
                android:visibility="visible">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Solicitud aceptada"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#059669"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="¡Excelente! El entrenador aceptó tu solicitud. Paga para iniciar tu entrenamiento."
                    android:textSize="14sp"
                    android:layout_marginBottom="16dp" />

                <!-- Botones de contacto -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:weightSum="2">

                    <!-- Botón de WhatsApp -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_pagar"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:text="Pagar"
                        android:textSize="14sp"
                        app:cornerRadius="12dp"
                        app:iconGravity="textStart"
                        app:iconPadding="8dp"
                        android:backgroundTint="#25D366" />

                </LinearLayout>
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_solicitar_mas_deportes_pendiente"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginTop="12dp"
                    android:text="Solicitar otro deporte"
                    android:textSize="15sp"
                    app:backgroundTint="#2563EB"
                    app:cornerRadius="12dp"
                    app:icon="@drawable/ic_add"
                    app:iconGravity="textStart"
                    app:iconTint="#FFFFFF"
                    android:visibility="gone" />

            </LinearLayout>

            <!-- ============================================
                 LAYOUT ACTIVO (Ya es su entrenador)
                 ============================================ -->
            <LinearLayout
                android:id="@+id/layout_activo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="#DCFCE7"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Entrenamiento activo"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#059669"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:layout_marginBottom="16dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_calificar_activo"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="⭐ Calificar entrenador"
                    app:cornerRadius="12dp" />

                <!-- Después del botón "Calificar entrenador", ANTES de cerrar el LinearLayout -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_solicitar_mas_deportes_activo"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginTop="12dp"
                    android:text="Solicitar otro deporte"
                    android:textSize="15sp"
                    app:backgroundTint="#2563EB"
                    app:cornerRadius="12dp"
                    app:icon="@drawable/ic_add"
                    app:iconGravity="textStart"
                    app:iconTint="#FFFFFF"
                    android:visibility="gone" />

            </LinearLayout>

            <!-- ============================================
                 LAYOUT FINALIZADO (Relación terminada)
                 ============================================ -->
            <LinearLayout
                android:id="@+id/layout_finalizado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="#E0F2FE"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Entrenamiento finalizado"
                    android:textAlignment="center"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#0284C7"
                    android:layout_marginBottom="16dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_solicitar_nuevamente"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Solicitar nuevamente"
                    app:cornerRadius="12dp"
                    android:backgroundTint="#3F51B5"
                    android:layout_marginBottom="12dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_calificar_finalizado"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="⭐ Calificar entrenador"
                    app:cornerRadius="12dp" />

            </LinearLayout>

            <!-- ============================================
                 LAYOUT ESPERANDO RESPUESTA (Solicitudes pendientes)
                 ============================================ -->
            <LinearLayout
                android:id="@+id/layout_esperando_respuesta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="#FEF3C7"
                android:visibility="gone">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/ic_clock"
                    app:tint="#F59E0B"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Solicitudes en revisión"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#D97706"
                    android:textAlignment="center"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="El entrenador está revisando tus solicitudes. Te notificaremos cuando responda."
                    android:textSize="14sp"
                    android:textColor="#92400E"
                    android:textAlignment="center"
                    android:lineSpacingExtra="4dp"
                    android:layout_marginBottom="16dp" />

                <!-- RecyclerView de solicitudes pendientes -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_solicitudes_pendientes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false" />

            </LinearLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>