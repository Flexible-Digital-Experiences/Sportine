<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPageBackground">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_marcar_completado"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/spacing_xlarge"
            android:paddingEnd="@dimen/spacing_xlarge"
            android:paddingTop="@dimen/spacing_large"
            android:paddingBottom="@dimen/spacing_large">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="@dimen/back_button_size"
                android:layout_height="@dimen/back_button_size"
                android:src="@drawable/ic_flechaatras"
                android:contentDescription="@string/volver"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/text_titulo_pagina"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/detalles_entrenamiento_title"
                android:textSize="@dimen/font_size_page_title"
                android:textStyle="bold"
                android:textColor="@color/colorTextPrimary"
                android:fontFamily="sans-serif-medium"
                android:layout_marginStart="@dimen/spacing_medium"
                app:layout_constraintStart_toEndOf="@id/btnBack"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/btnBack"
                app:layout_constraintBottom_toBottomOf="@id/btnBack" />

            <View
                android:id="@+id/divider_header"
                android:layout_width="0dp"
                android:layout_height="@dimen/divider_height"
                android:background="@color/colorDivider"
                android:layout_marginTop="@dimen/spacing_large"
                app:layout_constraintTop_toBottomOf="@id/btnBack"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <LinearLayout
                android:id="@+id/layout_fecha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/spacing_xlarge"
                app:layout_constraintTop_toBottomOf="@id/divider_header"
                app:layout_constraintStart_toStartOf="parent">

                <View
                    android:layout_width="@dimen/accent_line_width"
                    android:layout_height="@dimen/accent_line_height"
                    android:background="@color/colorAccent"
                    android:layout_marginEnd="@dimen/spacing_small" />

                <TextView
                    android:id="@+id/text_fecha"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorTextSecondary"
                    android:textSize="@dimen/font_size_date"
                    android:fontFamily="sans-serif-medium"
                    tools:text="Lunes, 24 de Octubre" />
            </LinearLayout>

            <TextView
                android:id="@+id/text_titulo_entrenamiento"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_xxlarge"
                android:textSize="@dimen/font_size_training_title"
                android:textStyle="bold"
                android:textColor="@color/colorTextPrimary"
                android:fontFamily="sans-serif-medium"
                tools:text="Entrenamiento de Fuerza"
                app:layout_constraintTop_toBottomOf="@id/layout_fecha"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <View
                android:id="@+id/divider_titulo"
                android:layout_width="0dp"
                android:layout_height="@dimen/divider_height"
                android:background="@color/colorDivider"
                android:layout_marginTop="@dimen/spacing_xlarge"
                app:layout_constraintTop_toBottomOf="@id/text_titulo_entrenamiento"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/label_entrenador"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_xlarge"
                android:text="@string/label_entrenador"
                android:textSize="@dimen/font_size_label"
                android:textColor="@color/colorTextLabel"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="0.1"
                app:layout_constraintTop_toBottomOf="@id/divider_titulo"
                app:layout_constraintStart_toStartOf="parent" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_entrenador_deporte"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_medium"
                app:cardCornerRadius="@dimen/corner_radius_card"
                app:cardElevation="0dp"
                app:strokeWidth="0dp"
                android:backgroundTint="@color/colorCardBackground"
                app:layout_constraintTop_toBottomOf="@id/label_entrenador"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/spacing_large">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/card_avatar_entrenador"
                        android:layout_width="@dimen/avatar_size"
                        android:layout_height="@dimen/avatar_size"
                        app:cardCornerRadius="@dimen/corner_radius_avatar"
                        app:cardElevation="0dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent">

                        <ImageView
                            android:id="@+id/img_avatar_entrenador"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:contentDescription="@string/avatar_entrenador_desc"
                            tools:src="@drawable/ic_launcher_background"/>
                    </com.google.android.material.card.MaterialCardView>

                    <LinearLayout
                        android:id="@+id/layout_info_entrenador"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="@dimen/spacing_large"
                        android:layout_marginEnd="@dimen/spacing_large"
                        app:layout_constraintStart_toEndOf="@id/card_avatar_entrenador"
                        app:layout_constraintEnd_toStartOf="@id/card_deporte_icon"
                        app:layout_constraintTop_toTopOf="@id/card_avatar_entrenador"
                        app:layout_constraintBottom_toBottomOf="@id/card_avatar_entrenador">

                        <TextView
                            android:id="@+id/text_nombre_entrenador"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/font_size_name"
                            android:textStyle="bold"
                            android:textColor="@color/colorTextPrimary"
                            android:fontFamily="sans-serif-medium"
                            tools:text="Carlos Rodríguez" />

                        <TextView
                            android:id="@+id/text_especialidad"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_xsmall"
                            android:textSize="@dimen/font_size_specialty"
                            android:textColor="@color/colorTextSecondary"
                            tools:text="Entrenador de Gimnasio" />
                    </LinearLayout>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/card_deporte_icon"
                        android:layout_width="@dimen/avatar_size"
                        android:layout_height="@dimen/avatar_size"
                        app:cardCornerRadius="@dimen/corner_radius_avatar"
                        app:cardElevation="0dp"
                        android:backgroundTint="@color/colorIconBackground"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent">

                        <ImageView
                            android:id="@+id/img_deporte_icon"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="@dimen/icon_padding"
                            android:scaleType="fitCenter"
                            android:contentDescription="@string/icono_deporte_desc"
                            tools:src="@drawable/ic_fitness_center_black_24dp"/>
                    </com.google.android.material.card.MaterialCardView>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <View
                android:id="@+id/divider_descripcion"
                android:layout_width="0dp"
                android:layout_height="@dimen/divider_height"
                android:background="@color/colorDivider"
                android:layout_marginTop="@dimen/spacing_xxlarge"
                app:layout_constraintTop_toBottomOf="@id/card_entrenador_deporte"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/label_descripcion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_xlarge"
                android:text="@string/label_descripcion"
                android:textSize="@dimen/font_size_label"
                android:textColor="@color/colorTextLabel"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="0.1"
                app:layout_constraintTop_toBottomOf="@id/divider_descripcion"
                app:layout_constraintStart_toStartOf="parent" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_descripcion"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_medium"
                app:cardCornerRadius="@dimen/corner_radius_card"
                app:cardElevation="0dp"
                app:strokeWidth="0dp"
                android:backgroundTint="@color/colorCardBackground"
                app:layout_constraintTop_toBottomOf="@id/label_descripcion"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:id="@+id/text_descripcion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/spacing_xlarge"
                    android:textSize="@dimen/font_size_description"
                    android:textColor="@color/colorTextDescription"
                    android:lineSpacingExtra="@dimen/spacing_xsmall"
                    tools:text="Descripción del entrenamiento..." />
            </com.google.android.material.card.MaterialCardView>

            <View
                android:id="@+id/divider_ejercicios"
                android:layout_width="0dp"
                android:layout_height="@dimen/divider_height"
                android:background="@color/colorDivider"
                android:layout_marginTop="@dimen/spacing_xxlarge"
                app:layout_constraintTop_toBottomOf="@id/card_descripcion"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <LinearLayout
                android:id="@+id/layout_header_ejercicios"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/spacing_xlarge"
                app:layout_constraintTop_toBottomOf="@id/divider_ejercicios"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:id="@+id/label_ejercicios"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/label_ejercicios"
                    android:textSize="@dimen/font_size_label"
                    android:textColor="@color/colorTextLabel"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:id="@+id/text_contador_ejercicios"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_size_specialty"
                    android:textColor="@color/colorTextSecondary"
                    tools:text="0 ejercicios"/>
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_ejercicios"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_medium"
                android:nestedScrollingEnabled="false"
                app:layout_constraintTop_toBottomOf="@id/layout_header_ejercicios"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:itemCount="3"
                tools:listitem="@layout/item_ejercicio_detalle"/>

            <TextView
                android:id="@+id/label_feedback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="Feedback de la sesión"
                android:textSize="@dimen/font_size_label"
                android:textColor="@color/colorTextLabel"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="0.1"
                app:layout_constraintTop_toBottomOf="@id/recycler_ejercicios"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/label_cansancio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Nivel de Cansancio (1-10)"
                android:textColor="@color/colorTextPrimary"
                app:layout_constraintTop_toBottomOf="@id/label_feedback"
                app:layout_constraintStart_toStartOf="parent"/>

            <com.google.android.material.slider.Slider
                android:id="@+id/slider_cansancio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:valueFrom="1.0"
                android:valueTo="10.0"
                android:stepSize="1.0"
                android:value="5.0"
                app:thumbColor="@color/colorAccent"
                app:trackColorActive="@color/colorAccent"
                app:layout_constraintTop_toBottomOf="@id/label_cansancio"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/label_dificultad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Dificultad (1-10)"
                android:textColor="@color/colorTextPrimary"
                app:layout_constraintTop_toBottomOf="@id/slider_cansancio"
                app:layout_constraintStart_toStartOf="parent"/>

            <com.google.android.material.slider.Slider
                android:id="@+id/slider_dificultad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:valueFrom="1.0"
                android:valueTo="10.0"
                android:stepSize="1.0"
                android:value="5.0"
                app:thumbColor="@color/sportine_accent"
                app:trackColorActive="@color/sportine_accent"
                app:layout_constraintTop_toBottomOf="@id/label_dificultad"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/label_animo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Estado de Ánimo"
                android:textColor="@color/colorTextPrimary"
                app:layout_constraintTop_toBottomOf="@id/slider_dificultad"
                app:layout_constraintStart_toStartOf="parent"/>

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chip_group_animo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:singleSelection="true"
                app:selectionRequired="true"
                app:layout_constraintTop_toBottomOf="@id/label_animo"
                app:layout_constraintStart_toStartOf="parent">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_motivado"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Motivado"
                    android:checked="true"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_energico"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Enérgico"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_satisfecho"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Satisfecho"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_agotado"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Agotado"/>
            </com.google.android.material.chip.ChipGroup>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/input_layout_comentario"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:hint="@string/hint_comentario_opcional"
                app:boxStrokeColor="@color/colorAccent"
                app:layout_constraintTop_toBottomOf="@id/chip_group_animo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/input_comentario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="3"
                    android:inputType="textCapSentences|textMultiLine" />
            </com.google.android.material.textfield.TextInputLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_marcar_completado"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginStart="@dimen/spacing_medium"
        android:layout_marginEnd="@dimen/spacing_medium"
        android:layout_marginTop="@dimen/spacing_medium"
        android:layout_marginBottom="130dp"
        android:text="@string/btn_marcar_completado"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        app:cornerRadius="@dimen/corner_radius_card"
        app:backgroundTint="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>