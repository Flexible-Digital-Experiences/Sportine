<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPageBackground"
    android:fillViewport="true"
    tools:context=".ui.usuarios.detallesentrenamiento.DetallesEntrenamientoFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/spacing_xlarge"
        android:paddingEnd="@dimen/spacing_xlarge"
        android:paddingTop="@dimen/spacing_large"
        android:paddingBottom="@dimen/spacing_xxlarge"
        android:layout_marginTop="@dimen/spacing_large">

        <!-- Botón de regreso -->
        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="@dimen/back_button_size"
            android:layout_height="@dimen/back_button_size"
            android:src="@drawable/ic_flechaatras"
            android:contentDescription="@string/volver"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Título de la página -->
        <TextView
            android:id="@+id/text_titulo_pagina"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/detalles_entrenamiento_title"
            android:textSize="@dimen/font_size_page_title"
            android:textStyle="bold"
            android:textColor="@color/colorTextPrimary"
            android:fontFamily="sans-serif-medium"
            android:layout_marginStart="@dimen/spacing_medium"
            app:layout_constraintStart_toEndOf="@id/btnBack"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/btnBack"
            app:layout_constraintBottom_toBottomOf="@id/btnBack" />

        <!-- Línea separadora -->
        <View
            android:id="@+id/divider_header"
            android:layout_width="0dp"
            android:layout_height="@dimen/divider_height"
            android:background="@color/colorDivider"
            android:layout_marginTop="@dimen/spacing_large"
            app:layout_constraintTop_toBottomOf="@id/btnBack"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Fecha del entrenamiento -->
        <LinearLayout
            android:id="@+id/layout_fecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/spacing_xlarge"
            app:layout_constraintTop_toBottomOf="@id/divider_header"
            app:layout_constraintStart_toStartOf="parent">

            <View
                android:layout_width="@dimen/accent_line_width"
                android:layout_height="@dimen/accent_line_height"
                android:background="@color/colorAccent"
                android:layout_marginEnd="@dimen/spacing_small" />

            <!-- Fecha desde backend -->
            <TextView
                android:id="@+id/text_fecha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorTextSecondary"
                android:textSize="@dimen/font_size_date"
                android:fontFamily="sans-serif-medium" />
        </LinearLayout>

        <!-- Título del entrenamiento desde backend -->
        <TextView
            android:id="@+id/text_titulo_entrenamiento"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_xxlarge"
            android:textSize="@dimen/font_size_training_title"
            android:textStyle="bold"
            android:textColor="@color/colorTextPrimary"
            android:fontFamily="sans-serif-medium"
            app:layout_constraintTop_toBottomOf="@id/layout_fecha"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Línea separadora -->
        <View
            android:id="@+id/divider_titulo"
            android:layout_width="0dp"
            android:layout_height="@dimen/divider_height"
            android:background="@color/colorDivider"
            android:layout_marginTop="@dimen/spacing_xlarge"
            app:layout_constraintTop_toBottomOf="@id/text_titulo_entrenamiento"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Label "Entrenador" -->
        <TextView
            android:id="@+id/label_entrenador"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_xlarge"
            android:text="@string/label_entrenador"
            android:textSize="@dimen/font_size_label"
            android:textColor="@color/colorTextLabel"
            android:fontFamily="sans-serif-medium"
            android:letterSpacing="0.1"
            app:layout_constraintTop_toBottomOf="@id/divider_titulo"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Tarjeta de entrenador y deporte -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_entrenador_deporte"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_medium"
            app:cardCornerRadius="@dimen/corner_radius_card"
            app:cardElevation="0dp"
            app:strokeWidth="0dp"
            android:backgroundTint="@color/colorCardBackground"
            app:layout_constraintTop_toBottomOf="@id/label_entrenador"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/spacing_large">

                <!-- Avatar del entrenador (URL desde backend) -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_avatar_entrenador"
                    android:layout_width="@dimen/avatar_size"
                    android:layout_height="@dimen/avatar_size"
                    app:cardCornerRadius="@dimen/corner_radius_avatar"
                    app:cardElevation="0dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent">

                    <ImageView
                        android:id="@+id/img_avatar_entrenador"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:contentDescription="@string/avatar_entrenador_desc" />
                </com.google.android.material.card.MaterialCardView>

                <!-- Información del entrenador desde backend -->
                <LinearLayout
                    android:id="@+id/layout_info_entrenador"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="@dimen/spacing_large"
                    android:layout_marginEnd="@dimen/spacing_large"
                    app:layout_constraintStart_toEndOf="@id/card_avatar_entrenador"
                    app:layout_constraintEnd_toStartOf="@id/card_deporte_icon"
                    app:layout_constraintTop_toTopOf="@id/card_avatar_entrenador"
                    app:layout_constraintBottom_toBottomOf="@id/card_avatar_entrenador">

                    <!-- Nombre del entrenador -->
                    <TextView
                        android:id="@+id/text_nombre_entrenador"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/font_size_name"
                        android:textStyle="bold"
                        android:textColor="@color/colorTextPrimary"
                        android:fontFamily="sans-serif-medium" />

                    <!-- Especialidad del entrenador -->
                    <TextView
                        android:id="@+id/text_especialidad"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_xsmall"
                        android:textSize="@dimen/font_size_specialty"
                        android:textColor="@color/colorTextSecondary" />
                </LinearLayout>

                <!-- Ícono del deporte (drawable dinámico desde backend) -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_deporte_icon"
                    android:layout_width="@dimen/avatar_size"
                    android:layout_height="@dimen/avatar_size"
                    app:cardCornerRadius="@dimen/corner_radius_avatar"
                    app:cardElevation="0dp"
                    android:backgroundTint="@color/colorIconBackground"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent">

                    <ImageView
                        android:id="@+id/img_deporte_icon"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="@dimen/icon_padding"
                        android:scaleType="fitCenter"
                        android:contentDescription="@string/icono_deporte_desc" />
                </com.google.android.material.card.MaterialCardView>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Línea separadora -->
        <View
            android:id="@+id/divider_descripcion"
            android:layout_width="0dp"
            android:layout_height="@dimen/divider_height"
            android:background="@color/colorDivider"
            android:layout_marginTop="@dimen/spacing_xxlarge"
            app:layout_constraintTop_toBottomOf="@id/card_entrenador_deporte"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Label "Descripción" -->
        <TextView
            android:id="@+id/label_descripcion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_xlarge"
            android:text="@string/label_descripcion"
            android:textSize="@dimen/font_size_label"
            android:textColor="@color/colorTextLabel"
            android:fontFamily="sans-serif-medium"
            android:letterSpacing="0.1"
            app:layout_constraintTop_toBottomOf="@id/divider_descripcion"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Tarjeta de descripción -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_descripcion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_medium"
            app:cardCornerRadius="@dimen/corner_radius_card"
            app:cardElevation="0dp"
            app:strokeWidth="0dp"
            android:backgroundTint="@color/colorCardBackground"
            app:layout_constraintTop_toBottomOf="@id/label_descripcion"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Descripción del entrenamiento desde backend -->
            <TextView
                android:id="@+id/text_descripcion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/spacing_xlarge"
                android:textSize="@dimen/font_size_description"
                android:textColor="@color/colorTextDescription"
                android:lineSpacingExtra="@dimen/spacing_xsmall" />
        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
