<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_deporte"
    android:layout_width="80dp"
    android:layout_height="80dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="0dp"
    app:strokeWidth="1dp"
    app:strokeColor="#E5E7EB"
    android:backgroundTint="#FFFFFF"
    android:layout_marginEnd="12dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="8dp">

        <!-- Icono del alumno (se carga dinÃ¡micamente desde backend) -->
        <ImageView
            android:id="@+id/img_alumno"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:contentDescription="Alumno"
            />
        <!--android:src="@drawable/ic_deporte_default" -->

        <!-- Nombre del Alumno (viene desde backend) -->
        <TextView
            android:id="@+id/text_nombre_deporte"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Alumno"
            android:textSize="12sp"
            android:textColor="#6B7280"
            android:fontFamily="sans-serif-medium"
            android:maxLines="1"
            android:ellipsize="end" />
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>