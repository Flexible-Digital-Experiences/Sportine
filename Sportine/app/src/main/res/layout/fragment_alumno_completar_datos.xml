<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="24dp">

            <!-- Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp"
                android:gravity="center_vertical">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/btnBack"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@color/white"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_marginEnd="12dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_flechaatras"
                        android:contentDescription="Volver"/>
                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Completar Datos"
                    android:textColor="#1A1A1A"
                    android:textSize="22sp"
                    android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:gravity="center_horizontal">

                <!-- Foto de perfil -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    app:cardCornerRadius="50dp"
                    app:cardElevation="4dp">

                    <ImageView
                        android:id="@+id/iv_avatar_completar"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:scaleType="centerCrop"
                        android:contentDescription="Foto de perfil"/>
                </com.google.android.material.card.MaterialCardView>

                <!-- Card Datos Actuales -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="@color/white">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Datos Actuales"
                            android:textColor="#1A1A1A"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="16dp"/>

                        <!-- Grid de datos actuales -->
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <!-- Columna izquierda -->
                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginEnd="12dp">

                                <!-- Lesiones -->
                                <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/fondo_campos_perfil"
                                    android:padding="12dp"
                                    android:layout_marginBottom="12dp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Lesiones"
                                        android:textColor="#9CA3AF"
                                        android:textSize="11sp"
                                        android:textStyle="bold"
                                        android:letterSpacing="0.05"/>

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="-"
                                        android:textColor="#1A1A1A"
                                        android:textSize="14sp"
                                        android:layout_marginTop="4dp"/>
                                </LinearLayout>

                                <!-- Padecimientos -->
                                <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/fondo_campos_perfil"
                                    android:padding="12dp"
                                    android:layout_marginBottom="12dp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Padecimientos"
                                        android:textColor="#9CA3AF"
                                        android:textSize="11sp"
                                        android:textStyle="bold"
                                        android:letterSpacing="0.05"/>

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="-"
                                        android:textColor="#1A1A1A"
                                        android:textSize="14sp"
                                        android:layout_marginTop="4dp"/>
                                </LinearLayout>

                                <!-- Género -->
                                <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/fondo_campos_perfil"
                                    android:padding="12dp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Género"
                                        android:textColor="#9CA3AF"
                                        android:textSize="11sp"
                                        android:textStyle="bold"
                                        android:letterSpacing="0.05"/>

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="-"
                                        android:textColor="#1A1A1A"
                                        android:textSize="14sp"
                                        android:layout_marginTop="4dp"/>
                                </LinearLayout>
                            </LinearLayout>

                            <!-- Columna derecha -->
                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                                <!-- Estatura -->
                                <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/fondo_campos_perfil"
                                    android:padding="12dp"
                                    android:layout_marginBottom="12dp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Estatura (m)"
                                        android:textColor="#9CA3AF"
                                        android:textSize="11sp"
                                        android:textStyle="bold"
                                        android:letterSpacing="0.05"/>

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="-"
                                        android:textColor="#1A1A1A"
                                        android:textSize="14sp"
                                        android:layout_marginTop="4dp"/>
                                </LinearLayout>

                                <!-- Peso -->
                                <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/fondo_campos_perfil"
                                    android:padding="12dp"
                                    android:layout_marginBottom="12dp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Peso (Kg)"
                                        android:textColor="#9CA3AF"
                                        android:textSize="11sp"
                                        android:textStyle="bold"
                                        android:letterSpacing="0.05"/>

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="-"
                                        android:textColor="#1A1A1A"
                                        android:textSize="14sp"
                                        android:layout_marginTop="4dp"/>
                                </LinearLayout>

                                <!-- Edad -->
                                <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/fondo_campos_perfil"
                                    android:padding="12dp"
                                    android:layout_marginBottom="12dp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Edad"
                                        android:textColor="#9CA3AF"
                                        android:textSize="11sp"
                                        android:textStyle="bold"
                                        android:letterSpacing="0.05"/>

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="-"
                                        android:textColor="#1A1A1A"
                                        android:textSize="14sp"
                                        android:layout_marginTop="4dp"/>
                                </LinearLayout>

                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Card Completar Datos -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="@color/white">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Completa tus datos"
                            android:textColor="#1A1A1A"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Si no quieres cambiar un campo déjalo vacío"
                            android:textColor="#6B7280"
                            android:textSize="13sp"
                            android:layout_marginBottom="16dp"/>

                        <!-- Grid de campos editables -->
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <!-- Columna izquierda -->
                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginEnd="12dp">

                                <!-- EditText Lesiones -->
                                <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/fondo_campos_perfil"
                                    android:padding="12dp"
                                    android:layout_marginBottom="12dp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Lesiones"
                                        android:textColor="#9CA3AF"
                                        android:textSize="11sp"
                                        android:textStyle="bold"
                                        android:letterSpacing="0.05"
                                        android:layout_marginBottom="4dp"/>

                                    <EditText
                                        android:id="@+id/etLesiones"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:hint="Ej: Rodilla"
                                        android:textSize="14sp"
                                        android:textColorHint="#CCC"
                                        android:background="@null"
                                        android:inputType="text"/>
                                </LinearLayout>

                                <!-- EditText Padecimientos -->
                                <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/fondo_campos_perfil"
                                    android:padding="12dp"
                                    android:layout_marginBottom="12dp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Padecimientos"
                                        android:textColor="#9CA3AF"
                                        android:textSize="11sp"
                                        android:textStyle="bold"
                                        android:letterSpacing="0.05"
                                        android:layout_marginBottom="4dp"/>

                                    <EditText
                                        android:id="@+id/etPadecimientos"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:hint="Ej: Asma"
                                        android:textSize="14sp"
                                        android:textColorHint="#CCC"
                                        android:background="@null"
                                        android:inputType="text"/>
                                </LinearLayout>

                                <!-- Spinner Género -->
                                <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/fondo_campos_perfil"
                                    android:padding="12dp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Género"
                                        android:textColor="#9CA3AF"
                                        android:textSize="11sp"
                                        android:textStyle="bold"
                                        android:letterSpacing="0.05"
                                        android:layout_marginBottom="4dp"/>

                                    <Spinner
                                        android:id="@+id/spinnerGenero"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:minHeight="32dp"
                                        android:background="@null"/>
                                </LinearLayout>

                            </LinearLayout>

                            <!-- Columna derecha -->
                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                                <!-- EditText Estatura -->
                                <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/fondo_campos_perfil"
                                    android:padding="12dp"
                                    android:layout_marginBottom="12dp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Estatura (m)"
                                        android:textColor="#9CA3AF"
                                        android:textSize="11sp"
                                        android:textStyle="bold"
                                        android:letterSpacing="0.05"
                                        android:layout_marginBottom="4dp"/>

                                    <EditText
                                        android:id="@+id/etEstatura"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:hint="1.75"
                                        android:textSize="14sp"
                                        android:textColorHint="#CCC"
                                        android:background="@null"
                                        android:inputType="numberDecimal"/>
                                </LinearLayout>

                                <!-- EditText Peso -->
                                <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/fondo_campos_perfil"
                                    android:padding="12dp"
                                    android:layout_marginBottom="12dp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Peso (Kg)"
                                        android:textColor="#9CA3AF"
                                        android:textSize="11sp"
                                        android:textStyle="bold"
                                        android:letterSpacing="0.05"
                                        android:layout_marginBottom="4dp"/>

                                    <EditText
                                        android:id="@+id/etPeso"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:hint="70"
                                        android:textSize="14sp"
                                        android:textColorHint="#CCC"
                                        android:background="@null"
                                        android:inputType="numberDecimal"/>
                                </LinearLayout>

                                <!-- Spinner Edad -->
                                <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/fondo_campos_perfil"
                                    android:padding="12dp"
                                    android:layout_marginBottom="12dp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Edad"
                                        android:textColor="#9CA3AF"
                                        android:textSize="11sp"
                                        android:textStyle="bold"
                                        android:letterSpacing="0.05"
                                        android:layout_marginBottom="4dp"/>

                                    <Spinner
                                        android:id="@+id/spinnerEdad"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:minHeight="32dp"
                                        android:background="@null"/>
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Botón Actualizar -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnActualizar"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Actualizar datos"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.02"
                    app:cornerRadius="16dp"
                    app:backgroundTint="#00A896"
                    android:textColor="@color/white"
                    app:elevation="4dp"
                    app:icon="@android:drawable/ic_menu_save"
                    app:iconGravity="start"
                    app:iconTint="@color/white"
                    app:iconSize="20dp"
                    android:textAllCaps="false"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>