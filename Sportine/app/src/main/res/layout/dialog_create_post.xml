<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"  android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/rounded_dialog_background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NUEVA PUBLICACIÓN"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_centerInParent="true"/>

        <ImageView
            android:id="@+id/btn_close_dialog"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_close_black_24dp"
            android:layout_alignParentEnd="true"
            android:contentDescription="Cerrar"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true" />
    </RelativeLayout>

    <EditText
        android:id="@+id/et_post_content"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:hint="Comparte tu logro, entrenamiento..."
        android:gravity="top|start"
        android:padding="12dp"
        android:background="@drawable/rounded_edittext_background"
        android:textColor="@color/black"
        android:textColorHint="@color/grey_text"
        android:textSize="16sp"
        android:layout_marginBottom="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <ImageView
            android:id="@+id/btn_add_photo"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_camera_black_24dp"
            android:contentDescription="Agregar foto"
            android:padding="4dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            app:tint="@color/sportine_primary"
            android:layout_marginEnd="16dp"/>

        <ImageView
            android:id="@+id/btn_add_location"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_location_black_24dp"
            android:contentDescription="Agregar ubicación"
            android:padding="4dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            app:tint="@color/sportine_primary"
            android:layout_marginEnd="16dp"/>

        <ImageView
            android:id="@+id/btn_add_timer"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_timer_black_24dp"
            android:contentDescription="Agregar duración"
            android:padding="4dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            app:tint="@color/sportine_primary"
            android:layout_marginEnd="16dp"/>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_selected_photos"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginBottom="16dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="horizontal"
        tools:listitem="@layout/item_selected_photo" /> <Button
    android:id="@+id/btn_publish_post"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="PUBLICAR"
    android:textColor="@android:color/white"
    android:textSize="16sp"
    android:textStyle="bold"
    android:backgroundTint="@color/sportine_accent"
    android:paddingVertical="12dp"
    app:cornerRadius="8dp" />

</LinearLayout>