<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    android:fillViewport="true"
    tools:context=".ui.usuarios.estadisticas.EstadisticasFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="16dp"
        android:paddingBottom="24dp">

        <!-- Barra de búsqueda -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_search"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="28dp"
            app:cardElevation="2dp"
            android:backgroundTint="#E8E8E8"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <EditText
                    android:id="@+id/et_buscar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="Busca entrenador, deportes, etc."
                    android:textColorHint="#999999"
                    android:textColor="#999999"
                    android:textSize="18sp"
                    android:inputType="text"
                    android:imeOptions="actionSearch"
                    android:paddingEnd="12dp"
                    android:paddingStart="0dp" />

                <ImageButton
                    android:id="@+id/iv_search"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_search"
                    android:contentDescription="Buscar"
                    app:tint="#999999" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Sección: Filtros -->
        <LinearLayout
            android:id="@+id/layout_tus_deportes_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/card_search"
            app:layout_constraintStart_toStartOf="parent">

            <View
                android:layout_width="3dp"
                android:layout_height="20dp"
                android:background="#3B82F6"
                android:layout_marginEnd="10dp" />

            <TextView
                android:id="@+id/text_tus_deportes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Filtros"
                android:textColor="#1A1A1A"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium" />
        </LinearLayout>

        <!-- HorizontalScrollView para iconos de deportes -->
        <HorizontalScrollView
            android:id="@+id/scroll_deportes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:scrollbars="none"
            android:overScrollMode="never"
            app:layout_constraintTop_toBottomOf="@id/layout_tus_deportes_header"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:id="@+id/layout_iconos_deportes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingEnd="8dp">

                <!-- Deporte 1: Fútbol -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_deporte_futbol"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="0dp"
                    app:strokeWidth="2dp"
                    app:strokeColor="#3B82F6"
                    android:backgroundTint="#FFFFFF"
                    android:layout_marginEnd="12dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="8dp">

                        <ImageView
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:contentDescription="Fútbol"
                            android:src="@drawable/balon_futbol" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="Fútbol"
                            android:textSize="12sp"
                            android:textColor="#1A1A1A"
                            android:fontFamily="sans-serif-medium" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Deporte 2: Básquetbol -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_deporte_basket"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="0dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="#E5E7EB"
                    android:backgroundTint="#FFFFFF"
                    android:layout_marginEnd="12dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="8dp">

                        <ImageView
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:contentDescription="Básquetbol"
                            android:src="@drawable/balon_basket" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="Basket"
                            android:textSize="12sp"
                            android:textColor="#6B7280"
                            android:fontFamily="sans-serif-medium" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Deporte 3: Tenis -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_deporte_voleibol"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="0dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="#E5E7EB"
                    android:backgroundTint="#FFFFFF"
                    android:layout_marginEnd="12dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="8dp">

                        <ImageView
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:contentDescription="Tenis"
                            android:src="@drawable/pelota_tenis" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="Tenis"
                            android:textSize="12sp"
                            android:textColor="#6B7280"
                            android:fontFamily="sans-serif-medium" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>
        </HorizontalScrollView>

        <!-- Separador antes de las tarjetas -->

        <!-- Contenedor para las tarjetas de entrenadores -->
        <View
            android:id="@+id/divider_deportes"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="12dp"
            android:background="#E5E7EB"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/scroll_deportes" />

        <LinearLayout
            android:id="@+id/contenedor_graficas"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider_deportes"
            app:layout_constraintVertical_bias="0.0">

            <!-- AQUÍ SE AGREGARÁN LAS TARJETAS DINÁMICAMENTE -->
            <!-- Ejemplo de tarjeta estática (puedes eliminarla si agregas dinámicamente) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_entrenador"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:backgroundTint="#FFFFFF"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:strokeColor="#E5E7EB"
                app:strokeWidth="1dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/image_entrenado"
                        android:layout_width="82dp"
                        android:layout_height="82dp"
                        android:layout_marginStart="8dp"
                        android:scaleType="centerCrop"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:shapeAppearanceOverlay="@style/CircularImageView"
                        app:strokeColor="#E0E0E0"
                        app:strokeWidth="2dp"
                        tools:src="@tools:sample/avatars"

                        />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="8dp"
                        android:orientation="vertical"
                        app:layout_constraintStart_toEndOf="@id/image_entrenado"
                        app:layout_constraintTop_toTopOf="parent">

                        <!-- Nombre del entrenador -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="Entrenador"
                            android:textColor="#111827"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <!-- Calificación con estrellas -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <RatingBar
                                android:id="@+id/rating_entrenad"
                                style="@style/Widget.AppCompat.RatingBar.Small"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:isIndicator="true"
                                android:numStars="5"
                                android:progressBackgroundTint="#E5E7EB"
                                android:progressTint="#FCD34D"
                                android:rating="4.5"
                                android:secondaryProgressTint="#FCD34D"
                                android:stepSize="0.5" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="6dp"
                                android:text="4.5"
                                android:textColor="#6B7280"
                                android:textSize="13sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <!-- Número de alumnos -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:contentDescription="Alumnos"
                                android:src="@drawable/ic_social_black_24dp"
                                app:tint="#6B7280" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="4dp"
                                android:text="15/20 alumnos"
                                android:textColor="#6B7280"
                                android:textSize="13sp" />
                        </LinearLayout>

                        <!-- Deportes que imparte -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:contentDescription="Deportes"
                                android:src="@drawable/ic_ensena"
                                app:tint="#6B7280" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="4dp"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:text="Fútbol, Basket"
                                android:textColor="#6B7280"
                                android:textSize="13sp" />
                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="4dp"
                        android:layout_height="0dp"
                        android:background="#10B981"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:backgroundTint="#FFFFFF"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:strokeColor="#E5E7EB"
                app:strokeWidth="1dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/image_entrenad"
                        android:layout_width="82dp"
                        android:layout_height="82dp"
                        android:layout_marginStart="8dp"
                        android:scaleType="centerCrop"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:shapeAppearanceOverlay="@style/CircularImageView"
                        app:strokeColor="#E0E0E0"
                        app:strokeWidth="2dp"
                        tools:src="@tools:sample/avatars"

                        />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="8dp"
                        android:orientation="vertical"
                        app:layout_constraintStart_toEndOf="@id/image_entrenad"
                        app:layout_constraintTop_toTopOf="parent">

                        <!-- Nombre del entrenador -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="Entrenador"
                            android:textColor="#111827"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <!-- Calificación con estrellas -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <RatingBar
                                android:id="@+id/rating_entrenador"
                                style="@style/Widget.AppCompat.RatingBar.Small"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:isIndicator="true"
                                android:numStars="5"
                                android:progressBackgroundTint="#E5E7EB"
                                android:progressTint="#FCD34D"
                                android:rating="4.5"
                                android:secondaryProgressTint="#FCD34D"
                                android:stepSize="0.5" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="6dp"
                                android:text="4.5"
                                android:textColor="#6B7280"
                                android:textSize="13sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <!-- Número de alumnos -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:contentDescription="Alumnos"
                                android:src="@drawable/ic_social_black_24dp"
                                app:tint="#6B7280" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="4dp"
                                android:text="15/20 alumnos"
                                android:textColor="#6B7280"
                                android:textSize="13sp" />
                        </LinearLayout>

                        <!-- Deportes que imparte -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:contentDescription="Deportes"
                                android:src="@drawable/ic_ensena"
                                app:tint="#6B7280" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="4dp"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:text="Fútbol, Basket"
                                android:textColor="#6B7280"
                                android:textSize="13sp" />
                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="4dp"
                        android:layout_height="0dp"
                        android:background="#10B981"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:backgroundTint="#FFFFFF"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:strokeColor="#E5E7EB"
                app:strokeWidth="1dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/image_entrenador"
                        android:layout_width="82dp"
                        android:layout_height="82dp"
                        android:layout_marginStart="8dp"
                        android:scaleType="centerCrop"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:shapeAppearanceOverlay="@style/CircularImageView"
                        app:strokeColor="#E0E0E0"
                        app:strokeWidth="2dp"
                        tools:src="@tools:sample/avatars"

                        />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="8dp"
                        android:orientation="vertical"
                        app:layout_constraintStart_toEndOf="@id/image_entrenador"
                        app:layout_constraintTop_toTopOf="parent">

                        <!-- Nombre del entrenador -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="Entrenador"
                            android:textColor="#111827"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <!-- Calificación con estrellas -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <RatingBar
                                style="@style/Widget.AppCompat.RatingBar.Small"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:isIndicator="true"
                                android:numStars="5"
                                android:progressBackgroundTint="#E5E7EB"
                                android:progressTint="#FCD34D"
                                android:rating="4.5"
                                android:secondaryProgressTint="#FCD34D"
                                android:stepSize="0.5" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="6dp"
                                android:text="4.5"
                                android:textColor="#6B7280"
                                android:textSize="13sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <!-- Número de alumnos -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:contentDescription="Alumnos"
                                android:src="@drawable/ic_social_black_24dp"
                                app:tint="#6B7280" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="4dp"
                                android:text="15/20 alumnos"
                                android:textColor="#6B7280"
                                android:textSize="13sp" />
                        </LinearLayout>

                        <!-- Deportes que imparte -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:contentDescription="Deportes"
                                android:src="@drawable/ic_ensena"
                                app:tint="#6B7280" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="4dp"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:text="Fútbol, Basket"
                                android:textColor="#6B7280"
                                android:textSize="13sp" />
                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="4dp"
                        android:layout_height="0dp"
                        android:background="#10B981"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>