<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/spacing_xlarge">

        <!-- Título del dialog -->
        <TextView
            android:id="@+id/text_titulo_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Agregar Ejercicio"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/colorTextPrimary"
            android:fontFamily="sans-serif-medium" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_xsmall"
            android:text="Completa los datos del ejercicio"
            android:textSize="14sp"
            android:textColor="@color/colorTextSecondary" />

        <!-- Selección de ejercicio del catálogo -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layout_ejercicio"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_xlarge"
            android:hint="Ejercicio"
            app:boxStrokeColor="@color/colorAccent"
            app:hintTextColor="@color/colorAccent"
            app:startIconTint="@color/colorAccent">

            <AutoCompleteTextView
                android:id="@+id/input_ejercicio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Tipo de medida (info del catálogo) -->
        <TextView
            android:id="@+id/text_tipo_medida_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_small"
            android:layout_marginStart="@dimen/spacing_medium"
            android:textSize="12sp"
            android:textColor="@color/colorTextSecondary"
            android:visibility="gone"
            tools:visibility="visible"
            tools:text="Este ejercicio se mide por: repeticiones, series, peso" />

        <!-- Descripción del ejercicio (del catálogo) -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_descripcion_catalogo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_medium"
            android:visibility="gone"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp"
            app:strokeWidth="1dp"
            app:strokeColor="@color/colorDivider"
            android:backgroundTint="@color/colorPageBackground"
            tools:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/spacing_medium">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Descripción:"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorTextLabel"
                    android:letterSpacing="0.1" />

                <TextView
                    android:id="@+id/text_descripcion_ejercicio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_xsmall"
                    android:textSize="14sp"
                    android:textColor="@color/colorTextSecondary"
                    android:lineSpacingExtra="2dp"
                    tools:text="Ejercicio de fuerza para piernas que trabaja cuádriceps, glúteos y core." />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Divisor -->
        <View
            android:id="@+id/divider_parametros"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorDivider"
            android:layout_marginTop="@dimen/spacing_xlarge"
            android:visibility="gone"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/label_parametros"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_large"
            android:text="PARÁMETROS DEL EJERCICIO"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/colorTextLabel"
            android:letterSpacing="0.1"
            android:visibility="gone"
            tools:visibility="visible" />

        <!-- Grid de campos dinámicos -->
        <LinearLayout
            android:id="@+id/layout_parametros_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/spacing_medium"
            android:visibility="gone"
            tools:visibility="visible">

            <!-- Fila 1: Series y Repeticiones -->
            <LinearLayout
                android:id="@+id/layout_series_reps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone"
                tools:visibility="visible">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/layout_series"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="@dimen/spacing_small"
                    android:hint="Series"
                    app:boxStrokeColor="@color/colorAccent"
                    app:hintTextColor="@color/colorAccent"
                    app:prefixText="×"
                    app:prefixTextColor="@color/colorTextSecondary">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/input_series"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:maxLength="2" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/layout_repeticiones"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/spacing_small"
                    android:hint="Repeticiones"
                    app:boxStrokeColor="@color/colorAccent"
                    app:hintTextColor="@color/colorAccent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/input_repeticiones"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:maxLength="3" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <!-- Fila 2: Peso y Duración -->
            <LinearLayout
                android:id="@+id/layout_peso_duracion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/spacing_medium"
                android:visibility="gone"
                tools:visibility="visible">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/layout_peso"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="@dimen/spacing_small"
                    android:hint="Peso (kg)"
                    app:boxStrokeColor="@color/colorAccent"
                    app:hintTextColor="@color/colorAccent"
                    app:suffixText="kg"
                    app:suffixTextColor="@color/colorTextSecondary">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/input_peso"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:maxLength="5" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/layout_duracion"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/spacing_small"
                    android:hint="Duración (min)"
                    app:boxStrokeColor="@color/colorAccent"
                    app:hintTextColor="@color/colorAccent"
                    app:suffixText="min"
                    app:suffixTextColor="@color/colorTextSecondary">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/input_duracion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:maxLength="4" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <!-- Fila 3: Distancia -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layout_distancia"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_medium"
                android:hint="Distancia (km)"
                android:visibility="gone"
                app:boxStrokeColor="@color/colorAccent"
                app:hintTextColor="@color/colorAccent"
                app:suffixText="km"
                app:suffixTextColor="@color/colorTextSecondary"
                tools:visibility="visible">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/input_distancia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:maxLength="6" />
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <!-- Botones de acción -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="@dimen/spacing_xxlarge">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_cancelar"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancelar"
                android:textColor="@color/colorTextSecondary"
                android:layout_marginEnd="@dimen/spacing_medium" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_agregar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Agregar"
                android:textColor="@android:color/white"
                app:backgroundTint="@color/colorAccent"
                app:cornerRadius="8dp" />
        </LinearLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>