<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/spacing_medium"
    android:layout_marginStart="@dimen/spacing_xsmall"
    android:layout_marginEnd="@dimen/spacing_xsmall"
    app:cardCornerRadius="@dimen/corner_radius_card"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/colorCardBackground"
    app:strokeWidth="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/spacing_large">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/img_alumno_avatar"
            android:layout_width="@dimen/avatar_size"
            android:layout_height="@dimen/avatar_size"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/ShapeAppearance.App.CircleImageView" />

        <ImageView
            android:id="@+id/icon_alumno_deporte"
            android:layout_width="@dimen/icon_size_large"
            android:layout_height="@dimen/icon_size_large"
            android:importantForAccessibility="no"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/colorAccent" />

        <TextView
            android:id="@+id/text_alumno_nombre"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_large"
            android:layout_marginEnd="@dimen/spacing_medium"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/colorTextPrimary"
            android:textSize="@dimen/font_size_name"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@id/icon_alumno_deporte"
            app:layout_constraintStart_toEndOf="@id/img_alumno_avatar"
            app:layout_constraintTop_toTopOf="@id/img_alumno_avatar" />

        <TextView
            android:id="@+id/text_alumno_descripcion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_xsmall"
            android:layout_marginEnd="@dimen/spacing_medium"
            android:textColor="@color/colorTextSecondary"
            android:textSize="@dimen/font_size_specialty"
            app:layout_constraintEnd_toStartOf="@id/icon_alumno_deporte"
            app:layout_constraintStart_toStartOf="@id/text_alumno_nombre"
            app:layout_constraintTop_toBottomOf="@id/text_alumno_nombre" />

        <TextView
            android:id="@+id/text_alumno_deporte"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_small"
            android:layout_marginEnd="@dimen/spacing_medium"
            android:textColor="@color/colorTextSecondary"
            android:textSize="@dimen/font_size_specialty"
            app:layout_constraintEnd_toStartOf="@id/icon_alumno_deporte"
            app:layout_constraintStart_toStartOf="@id/text_alumno_descripcion"
            app:layout_constraintTop_toBottomOf="@id/text_alumno_descripcion" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
