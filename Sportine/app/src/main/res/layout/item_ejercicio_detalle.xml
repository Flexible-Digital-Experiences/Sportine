<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:strokeWidth="1dp"
    app:strokeColor="@color/colorDivider"
    android:backgroundTint="@color/colorCardBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <CheckBox
            android:id="@+id/checkbox_ejercicio"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:button="@drawable/checkbox_selector"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/text_numero_ejercicio"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:gravity="center"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/colorAccent"
            android:background="@drawable/bg_numero_ejercicio"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="1"/>

        <TextView
            android:id="@+id/text_nombre_ejercicio"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="8dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/colorTextPrimary"
            android:fontFamily="sans-serif-medium"
            android:maxLines="2"
            android:ellipsize="end"
            app:layout_constraintStart_toEndOf="@id/text_numero_ejercicio"
            app:layout_constraintEnd_toStartOf="@id/checkbox_ejercicio"
            app:layout_constraintTop_toTopOf="@id/text_numero_ejercicio"
            tools:text="Ejercicio de Ejemplo"/>

        <LinearLayout
            android:id="@+id/layout_metricas"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            app:layout_constraintTop_toBottomOf="@id/text_nombre_ejercicio"
            app:layout_constraintStart_toStartOf="@id/text_nombre_ejercicio"
            app:layout_constraintEnd_toStartOf="@id/checkbox_ejercicio">

            <TextView
                android:id="@+id/text_series"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="12dp"
                android:textSize="13sp"
                android:textColor="@color/colorTextSecondary"
                android:drawablePadding="4dp"
                app:drawableStartCompat="@drawable/ic_series"
                android:visibility="gone"
                tools:visibility="visible"
                tools:text="4 series"/>

            <TextView
                android:id="@+id/text_repeticiones"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="12dp"
                android:textSize="13sp"
                android:textColor="@color/colorTextSecondary"
                android:drawablePadding="4dp"
                app:drawableStartCompat="@drawable/ic_repeticiones"
                android:visibility="gone"
                tools:visibility="visible"
                tools:text="12 reps"/>

            <TextView
                android:id="@+id/text_distancia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="12dp"
                android:textSize="13sp"
                android:textColor="@color/colorTextSecondary"
                android:drawablePadding="4dp"
                app:drawableStartCompat="@drawable/ic_distancia"
                android:visibility="gone"
                tools:text="5 km"/>

            <TextView
                android:id="@+id/text_duracion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="12dp"
                android:textSize="13sp"
                android:textColor="@color/colorTextSecondary"
                android:drawablePadding="4dp"
                app:drawableStartCompat="@drawable/ic_duracion"
                android:visibility="gone"
                tools:text="30 min"/>

            <TextView
                android:id="@+id/text_peso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textStyle="bold"
                android:textColor="@color/colorAccent"
                android:drawablePadding="4dp"
                app:drawableStartCompat="@drawable/ic_peso"
                android:visibility="gone"
                tools:visibility="visible"
                tools:text="20kg"/>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>