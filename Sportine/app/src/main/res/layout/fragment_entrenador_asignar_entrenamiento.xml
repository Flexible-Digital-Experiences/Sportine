<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPageBackground"
    tools:context="ui.entrenadores.asignarentrenamiento.AsignarEntrenamientoFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/spacing_xlarge"
            android:paddingEnd="@dimen/spacing_xlarge"
            android:paddingTop="@dimen/spacing_large"
            android:paddingBottom="120dp">

            <!-- Header: Botón de regreso y título -->
            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="@dimen/back_button_size"
                android:layout_height="@dimen/back_button_size"
                android:src="@drawable/ic_flechaatras"
                android:contentDescription="@string/volver"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/text_titulo_pagina"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Asignar Entrenamiento"
                android:textSize="@dimen/font_size_page_title"
                android:textStyle="bold"
                android:textColor="@color/colorTextPrimary"
                android:fontFamily="sans-serif-medium"
                android:layout_marginStart="@dimen/spacing_medium"
                app:layout_constraintStart_toEndOf="@id/btnBack"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/btnBack"
                app:layout_constraintBottom_toBottomOf="@id/btnBack" />

            <View
                android:id="@+id/divider_header"
                android:layout_width="0dp"
                android:layout_height="@dimen/divider_height"
                android:background="@color/colorDivider"
                android:layout_marginTop="@dimen/spacing_large"
                app:layout_constraintTop_toBottomOf="@id/btnBack"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Sección: Info del Alumno -->
            <TextView
                android:id="@+id/label_alumno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_xlarge"
                android:text="ALUMNO"
                android:textSize="@dimen/font_size_label"
                android:textColor="@color/colorTextLabel"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="0.1"
                app:layout_constraintTop_toBottomOf="@id/divider_header"
                app:layout_constraintStart_toStartOf="parent" />

            <!-- Reutilizando el card del alumno existente -->
            <include
                android:id="@+id/card_alumno"
                layout="@layout/item_entrenador_alumno"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_medium"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="0dp"
                app:layout_constraintTop_toBottomOf="@id/label_alumno"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <View
                android:id="@+id/divider_datos"
                android:layout_width="0dp"
                android:layout_height="@dimen/divider_height"
                android:background="@color/colorDivider"
                android:layout_marginTop="@dimen/spacing_xxlarge"
                app:layout_constraintTop_toBottomOf="@id/card_alumno"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Sección: Datos del Entrenamiento -->
            <TextView
                android:id="@+id/label_datos_entrenamiento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_xlarge"
                android:text="DATOS DEL ENTRENAMIENTO"
                android:textSize="@dimen/font_size_label"
                android:textColor="@color/colorTextLabel"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="0.1"
                app:layout_constraintTop_toBottomOf="@id/divider_datos"
                app:layout_constraintStart_toStartOf="parent" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_datos_entrenamiento"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_medium"
                app:cardCornerRadius="@dimen/corner_radius_card"
                app:cardElevation="0dp"
                app:strokeWidth="0dp"
                android:backgroundTint="@color/colorCardBackground"
                app:layout_constraintTop_toBottomOf="@id/label_datos_entrenamiento"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_xlarge">

                    <!-- Título del entrenamiento -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layout_titulo"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Título del entrenamiento"
                        app:boxStrokeColor="@color/colorAccent"
                        app:hintTextColor="@color/colorAccent">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/input_titulo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:maxLines="1" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Objetivo -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layout_objetivo"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_large"
                        android:hint="Objetivo"
                        app:boxStrokeColor="@color/colorAccent"
                        app:hintTextColor="@color/colorAccent">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/input_objetivo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textMultiLine"
                            android:minLines="2"
                            android:maxLines="4"
                            android:gravity="top|start" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Fecha y Hora en fila -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/spacing_large">

                        <!-- Fecha -->
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/layout_fecha"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="@dimen/spacing_small"
                            android:hint="Fecha"
                            app:boxStrokeColor="@color/colorAccent"
                            app:hintTextColor="@color/colorAccent"
                            app:endIconMode="custom"
                            app:endIconDrawable="@drawable/ic_calendar">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/input_fecha"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:focusable="false"
                                android:clickable="true"
                                android:inputType="none" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <!-- Hora -->
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/layout_hora"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="@dimen/spacing_small"
                            android:hint="Hora"
                            app:boxStrokeColor="@color/colorAccent"
                            app:hintTextColor="@color/colorAccent"
                            app:endIconMode="custom"
                            app:endIconDrawable="@drawable/ic_clock">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/input_hora"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:focusable="false"
                                android:clickable="true"
                                android:inputType="none" />
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>

                    <!-- Dificultad -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layout_dificultad"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_large"
                        android:hint="Dificultad"
                        app:boxStrokeColor="@color/colorAccent"
                        app:hintTextColor="@color/colorAccent">

                        <AutoCompleteTextView
                            android:id="@+id/input_dificultad"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none" />
                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <View
                android:id="@+id/divider_ejercicios"
                android:layout_width="0dp"
                android:layout_height="@dimen/divider_height"
                android:background="@color/colorDivider"
                android:layout_marginTop="@dimen/spacing_xxlarge"
                app:layout_constraintTop_toBottomOf="@id/card_datos_entrenamiento"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Sección: Ejercicios -->
            <LinearLayout
                android:id="@+id/layout_header_ejercicios"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/spacing_xlarge"
                app:layout_constraintTop_toBottomOf="@id/divider_ejercicios"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:id="@+id/label_ejercicios"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="EJERCICIOS"
                    android:textSize="@dimen/font_size_label"
                    android:textColor="@color/colorTextLabel"
                    android:fontFamily="sans-serif-medium"
                    android:letterSpacing="0.1" />

                <TextView
                    android:id="@+id/text_contador_ejercicios"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 ejercicios"
                    android:textSize="@dimen/font_size_specialty"
                    android:textColor="@color/colorTextSecondary"
                    android:fontFamily="sans-serif-medium" />
            </LinearLayout>

            <!-- Estado vacío cuando no hay ejercicios -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_empty_state"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_medium"
                app:cardCornerRadius="@dimen/corner_radius_card"
                app:cardElevation="0dp"
                app:strokeWidth="2dp"
                app:strokeColor="@color/colorDivider"
                android:backgroundTint="@color/colorPageBackground"
                app:layout_constraintTop_toBottomOf="@id/layout_header_ejercicios"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="48dp">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/ic_ejercicio_placeholder"
                        android:alpha="0.3"
                        android:contentDescription="Sin ejercicios" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_large"
                        android:text="No hay ejercicios asignados"
                        android:textSize="16sp"
                        android:textColor="@color/colorTextSecondary"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_xsmall"
                        android:text="Presiona el botón + para agregar"
                        android:textSize="14sp"
                        android:textColor="@color/colorTextSecondary" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- RecyclerView de ejercicios -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_ejercicios"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_medium"
                android:nestedScrollingEnabled="false"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/layout_header_ejercicios"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:listitem="@layout/item_ejercicio_asignado"
                tools:itemCount="3" />

            <!-- Espacio flexible que cambia según hay ejercicios o no -->
            <androidx.constraintlayout.widget.Group
                android:id="@+id/group_ejercicios_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:constraint_referenced_ids="recycler_ejercicios,card_empty_state" />

            <!-- Botón Guardar Entrenamiento -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_guardar_entrenamiento"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_marginTop="@dimen/spacing_xxlarge"
                android:text="Guardar Entrenamiento"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                app:cornerRadius="@dimen/corner_radius_card"
                app:backgroundTint="@color/colorAccent"
                app:layout_constraintTop_toBottomOf="@id/recycler_ejercicios"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- FAB para agregar ejercicios -->
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/fab_agregar_ejercicio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/spacing_xlarge"
        android:text="Agregar ejercicio"
        android:textColor="@android:color/white"
        app:icon="@drawable/ic_add"
        app:iconTint="@android:color/white"
        app:backgroundTint="@color/colorAccent" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>