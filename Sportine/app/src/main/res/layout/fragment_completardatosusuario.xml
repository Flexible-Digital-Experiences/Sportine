<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- ScrollView con el contenido -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/nav_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="20dp">

            <!-- Header con flecha atrás, título y configuración -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp">

                <!-- Flecha atrás -->
                <ImageView
                    android:id="@+id/btnBack"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_flechaatras"
                    android:contentDescription="Volver"/>

                <!-- Título PERFIL -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PERFIL"
                    android:textColor="#000"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.1"
                    android:layout_centerInParent="true"/>

            </RelativeLayout>

            <!-- Imagen de perfil -->
            <FrameLayout
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/image_perfil"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    app:shapeAppearanceOverlay="@style/CircularImageView"
                    tools:src="@tools:sample/avatars" />
            </FrameLayout>

            <!-- Sección Datos actuales -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="40dp"
                android:paddingEnd="40dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Datos actuales"
                    android:textColor="#666"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:layout_marginBottom="16dp"/>

                <!-- Grid de datos actuales -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <!-- Columna izquierda -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginEnd="16dp">

                        <!-- Nivel -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Nivel"
                            android:textColor="#999"
                            android:textSize="12sp"
                            android:paddingBottom="4dp"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#CCC"
                            android:layout_marginBottom="16dp"/>

                        <!-- Lesiones -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Lesiones"
                            android:textColor="#999"
                            android:textSize="12sp"
                            android:paddingBottom="4dp"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#CCC"
                            android:layout_marginBottom="16dp"/>

                        <!-- Padecimientos -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Padecimientos"
                            android:textColor="#999"
                            android:textSize="12sp"
                            android:paddingBottom="4dp"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#CCC"
                            android:layout_marginBottom="16dp"/>

                        <!-- Deportes -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Deportes"
                            android:textColor="#999"
                            android:textSize="12sp"
                            android:paddingBottom="4dp"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#CCC"/>
                    </LinearLayout>

                    <!-- Columna derecha -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <!-- Estatura (m) -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Estatura (m)"
                            android:textColor="#999"
                            android:textSize="12sp"
                            android:paddingBottom="4dp"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#CCC"
                            android:layout_marginBottom="16dp"/>

                        <!-- Peso (Kg.) -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Peso (Kg.)"
                            android:textColor="#999"
                            android:textSize="12sp"
                            android:paddingBottom="4dp"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#CCC"
                            android:layout_marginBottom="16dp"/>

                        <!-- Edad -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Edad"
                            android:textColor="#999"
                            android:textSize="12sp"
                            android:paddingBottom="4dp"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#CCC"
                            android:layout_marginBottom="16dp"/>

                        <!-- Genero -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Genero"
                            android:textColor="#999"
                            android:textSize="12sp"
                            android:paddingBottom="4dp"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#CCC"/>
                    </LinearLayout>
                </LinearLayout>

                <!-- Sección Completa tus datos -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Completa tus datos"
                    android:textColor="#666"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Si no quieres cambiar un campo déjalo vacío"
                    android:textColor="#000"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:layout_marginBottom="20dp"/>

                <!-- Grid de datos a completar -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <!-- Columna izquierda -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginEnd="16dp">

                        <!-- Nivel con Spinner -->
                        <Spinner
                            android:id="@+id/spinnerNivel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="32dp"
                            android:prompt="@string/nivel_prompt"
                            android:spinnerMode="dropdown"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#000"
                            android:layout_marginBottom="16dp"/>

                        <!-- Lesiones -->
                        <EditText
                            android:id="@+id/etLesiones"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Lesiones"
                            android:textColorHint="#999"
                            android:textColor="#666"
                            android:textSize="12sp"
                            android:background="@null"
                            android:paddingBottom="4dp"
                            android:inputType="text"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#000"
                            android:layout_marginBottom="16dp"/>

                        <!-- Padecimientos -->
                        <EditText
                            android:id="@+id/etPadecimientos"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Padecimientos"
                            android:textColorHint="#999"
                            android:textColor="#666"
                            android:textSize="12sp"
                            android:background="@null"
                            android:paddingBottom="4dp"
                            android:inputType="text"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#000"
                            android:layout_marginBottom="16dp"/>

                        <!-- Deportes con Spinner -->
                        <Spinner
                            android:id="@+id/spinnerDeportes"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="32dp"
                            android:prompt="@string/deportes_prompt"
                            android:spinnerMode="dropdown"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#000"/>
                    </LinearLayout>

                    <!-- Columna derecha -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <!-- Estatura (m) -->
                        <EditText
                            android:id="@+id/etEstatura"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Estatura (m)"
                            android:textColorHint="#999"
                            android:textColor="#666"
                            android:textSize="12sp"
                            android:background="@null"
                            android:paddingBottom="4dp"
                            android:inputType="numberDecimal"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#000"
                            android:layout_marginBottom="16dp"/>

                        <!-- Peso (Kg.) -->
                        <EditText
                            android:id="@+id/etPeso"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Peso (Kg.)"
                            android:textColorHint="#999"
                            android:textColor="#666"
                            android:textSize="12sp"
                            android:background="@null"
                            android:paddingBottom="4dp"
                            android:inputType="numberDecimal"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#000"
                            android:layout_marginBottom="16dp"/>

                        <!-- Edad con Spinner -->
                        <Spinner
                            android:id="@+id/spinnerEdad"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="32dp"
                            android:prompt="@string/edad_prompt"
                            android:spinnerMode="dropdown"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#000"
                            android:layout_marginBottom="16dp"/>

                        <!-- Genero con Spinner -->
                        <Spinner
                            android:id="@+id/spinnerGenero"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="32dp"
                            android:prompt="@string/genero_prompt"
                            android:spinnerMode="dropdown"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#000"/>
                    </LinearLayout>
                </LinearLayout>

                <!-- Botón Actualizar -->
                <Button
                    android:id="@+id/btnActualizar"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:text="Actualizar"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:backgroundTint="#0288D1"
                    android:textAllCaps="false"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation View -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/nav_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?android:attr/windowBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:menu="@menu/bottom_nav_menu" />

</androidx.constraintlayout.widget.ConstraintLayout>