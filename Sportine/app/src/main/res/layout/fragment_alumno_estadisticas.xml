<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="16dp"
        android:paddingBottom="120dp"
        tools:context=".ui.usuarios.estadisticas.EstadisticasFragment">

        <!-- TÃ­tulo de la pÃ¡gina -->
        <TextView
            android:id="@+id/text_titulo_estadisticas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EstadÃ­sticas"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="#1A1A1A"
            android:fontFamily="sans-serif-medium"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Separador visual -->
        <View
            android:id="@+id/divider_titulo"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="#E5E7EB"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/text_titulo_estadisticas"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- =========================== -->
        <!-- LAYOUT DE CONTENIDO -->
        <!-- =========================== -->
        <LinearLayout
            android:id="@+id/layout_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="24dp"
            android:visibility="visible"
            app:layout_constraintTop_toBottomOf="@id/divider_titulo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- SECCIÃ“N: Resumen General -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Resumen General"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#1A1A1A"
                android:layout_marginBottom="12dp" />

            <!-- Grid de Cards de Resumen -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:baselineAligned="false">

                <!-- Card: Total Entrenamientos -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@android:color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total"
                            android:textSize="14sp"
                            android:textColor="#6B7280" />

                        <TextView
                            android:id="@+id/text_total_entrenamientos"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="32sp"
                            android:textStyle="bold"
                            android:textColor="#1A1A1A"
                            android:layout_marginTop="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Entrenamientos"
                            android:textSize="12sp"
                            android:textColor="#9CA3AF" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Card: Racha Actual -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@android:color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ”¥ Racha"
                            android:textSize="14sp"
                            android:textColor="#6B7280" />

                        <TextView
                            android:id="@+id/text_racha_actual"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0 dÃ­as"
                            android:textSize="32sp"
                            android:textStyle="bold"
                            android:textColor="#F59E0B"
                            android:layout_marginTop="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Consecutivos"
                            android:textSize="12sp"
                            android:textColor="#9CA3AF" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <!-- Segunda fila de cards -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginTop="16dp"
                android:baselineAligned="false">

                <!-- Card: Mes Actual -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@android:color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Este Mes"
                            android:textSize="14sp"
                            android:textColor="#6B7280" />

                        <TextView
                            android:id="@+id/text_entrenamientos_mes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="32sp"
                            android:textStyle="bold"
                            android:textColor="#10B981"
                            android:layout_marginTop="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Completados"
                            android:textSize="12sp"
                            android:textColor="#9CA3AF" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Card: Tendencia -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@android:color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tendencia"
                            android:textSize="14sp"
                            android:textColor="#6B7280" />

                        <TextView
                            android:id="@+id/text_tendencia"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="â†’ Estable"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#6B7280"
                            android:layout_marginTop="8dp"
                            android:gravity="center" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <!-- SECCIÃ“N: Frecuencia de Entrenamientos -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Frecuencia de Entrenamientos"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#1A1A1A"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="12dp" />

            <!-- Card con GrÃ¡fica de Barras -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@android:color/white">

                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/chart_frecuencia"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:padding="16dp" />
            </com.google.android.material.card.MaterialCardView>

            <!-- SECCIÃ“N: DistribuciÃ³n por Deporte -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DistribuciÃ³n por Deporte"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#1A1A1A"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="12dp" />

            <!-- Card con GrÃ¡fica de Pastel -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@android:color/white">

                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/chart_deportes"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:padding="16dp" />
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <!-- =========================== -->
        <!-- LAYOUT DE CARGA -->
        <!-- =========================== -->
        <LinearLayout
            android:id="@+id/layout_loading"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="48dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/divider_titulo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <ProgressBar
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:indeterminate="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cargando estadÃ­sticas..."
                android:textSize="16sp"
                android:textColor="#6B7280"
                android:layout_marginTop="16dp" />
        </LinearLayout>

        <!-- =========================== -->
        <!-- LAYOUT DE ERROR -->
        <!-- =========================== -->
        <LinearLayout
            android:id="@+id/layout_error"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="48dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/divider_titulo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="âŒ"
                android:textSize="48sp"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/text_error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Error al cargar estadÃ­sticas"
                android:textSize="16sp"
                android:textColor="#6B7280"
                android:gravity="center" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>