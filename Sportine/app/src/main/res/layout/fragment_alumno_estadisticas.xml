<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    android:fillViewport="true"
    tools:context=".ui.usuarios.estadisticas.EstadisticasFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="16dp"
        android:paddingBottom="24dp">

        <!-- Título de la página -->
        <TextView
            android:id="@+id/text_titulo_estadisticas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Estadísticas"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="#1A1A1A"
            android:fontFamily="sans-serif-medium"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Separador visual -->
        <View
            android:id="@+id/divider_titulo"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="#E5E7EB"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/text_titulo_estadisticas"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Sección: Tus deportes -->
        <LinearLayout
            android:id="@+id/layout_tus_deportes_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/divider_titulo"
            app:layout_constraintStart_toStartOf="parent">

            <View
                android:layout_width="3dp"
                android:layout_height="20dp"
                android:background="#3B82F6"
                android:layout_marginEnd="10dp" />

            <TextView
                android:id="@+id/text_tus_deportes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tus deportes"
                android:textColor="#1A1A1A"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium" />
        </LinearLayout>

        <!-- HorizontalScrollView para iconos de deportes -->
        <HorizontalScrollView
            android:id="@+id/scroll_deportes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:scrollbars="none"
            android:overScrollMode="never"
            app:layout_constraintTop_toBottomOf="@id/layout_tus_deportes_header"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:id="@+id/layout_iconos_deportes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingEnd="8dp">

                <!-- Deporte 1: Fútbol (Ejemplo) -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_deporte_futbol"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="0dp"
                    app:strokeWidth="2dp"
                    app:strokeColor="#3B82F6"
                    android:backgroundTint="#FFFFFF"
                    android:layout_marginEnd="12dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    app:shapeAppearanceOverlay="@style/CircularImageView">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="8dp">

                        <ImageView
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:contentDescription="Fútbol"
                            android:src="@drawable/balon_futbol" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="Fútbol"
                            android:textSize="12sp"
                            android:textColor="#1A1A1A"
                            android:fontFamily="sans-serif-medium" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Deporte 2: Básquetbol (Ejemplo) -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_deporte_basket"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="0dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="#E5E7EB"
                    android:backgroundTint="#FFFFFF"
                    android:layout_marginEnd="12dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="8dp">

                        <ImageView
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:contentDescription="Básquetbol"
                            android:src="@drawable/balon_basket" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="Basket"
                            android:textSize="12sp"
                            android:textColor="#6B7280"
                            android:fontFamily="sans-serif-medium" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Deporte 3: Voleibol (Ejemplo) -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_deporte_voleibol"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="0dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="#E5E7EB"
                    android:backgroundTint="#FFFFFF"
                    android:layout_marginEnd="12dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="8dp">

                        <ImageView
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:contentDescription="Tenis"
                            android:src="@drawable/pelota_tenis" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="Tenis"
                            android:textSize="12sp"
                            android:textColor="#6B7280"
                            android:fontFamily="sans-serif-medium" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>
        </HorizontalScrollView>

        <!-- Separador antes de las gráficas -->
        <View
            android:id="@+id/divider_deportes"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="#E5E7EB"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/scroll_deportes"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Contenedor para las 3 gráficas -->
        <LinearLayout
            android:id="@+id/contenedor_graficas"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/divider_deportes"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <!-- Las 3 tarjetas con gráficas se agregarán dinámicamente aquí -->

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>