<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_alumno"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/spacing_medium"
    app:cardCornerRadius="@dimen/corner_radius_card"
    app:cardElevation="2dp"
    app:strokeWidth="2dp"
    app:strokeColor="@color/colorDivider"
    android:backgroundTint="@color/colorCardBackground"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/spacing_large">

        <!-- Avatar con indicador de actividad -->
        <FrameLayout
            android:id="@+id/frame_avatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/img_alumno_avatar"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:scaleType="centerCrop"
                app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Full"
                app:strokeWidth="2dp"
                app:strokeColor="@color/colorDivider" />

            <!-- Indicador de actividad reciente (punto verde) -->
            <View
                android:id="@+id/indicator_activo"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_gravity="end|bottom"
                android:background="@drawable/shape_circle_indicator"
                android:visibility="gone" />
        </FrameLayout>

        <!-- Nombre del alumno -->
        <TextView
            android:id="@+id/text_alumno_nombre"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_large"
            android:layout_marginEnd="@dimen/spacing_medium"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/colorTextPrimary"
            android:textSize="16sp"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/frame_avatar"
            app:layout_constraintTop_toTopOf="@id/frame_avatar" />

        <!-- Última actividad -->
        <TextView
            android:id="@+id/text_ultima_actividad"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="@color/colorTextSecondary"
            android:textSize="13sp"
            android:drawablePadding="4dp"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintEnd_toEndOf="@id/text_alumno_nombre"
            app:layout_constraintStart_toStartOf="@id/text_alumno_nombre"
            app:layout_constraintTop_toBottomOf="@id/text_alumno_nombre" />

        <!-- Línea separadora -->
        <View
            android:id="@+id/divider_progreso"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/colorDivider"
            android:layout_marginTop="@dimen/spacing_medium"
            app:layout_constraintTop_toBottomOf="@id/frame_avatar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Progreso semanal -->
        <LinearLayout
            android:id="@+id/layout_progreso"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_medium"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            app:layout_constraintTop_toBottomOf="@id/divider_progreso"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Entrenamientos completados -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/icon_completados"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    app:tint="@color/colorAccent"
                    android:contentDescription="Completados" />

                <TextView
                    android:id="@+id/text_completados"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:textColor="@color/colorTextPrimary"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-medium" />
            </LinearLayout>

            <!-- Pendientes -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/icon_pendientes"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    app:tint="@color/colorTextSecondary"
                    android:contentDescription="Pendientes" />

                <TextView
                    android:id="@+id/text_pendientes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:textColor="@color/colorTextSecondary"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>