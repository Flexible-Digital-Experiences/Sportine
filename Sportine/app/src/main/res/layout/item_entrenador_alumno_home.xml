<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_alumno"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:layout_marginHorizontal="4dp"
    android:layout_marginTop="0dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="3dp"
    app:strokeWidth="0dp"
    android:backgroundTint="@color/colorCardBackground"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/img_alumno_avatar"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_avatar_default"
            app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Full"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/indicator_activo"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:background="@drawable/shape_circle_indicator"
            android:backgroundTint="#4CAF50"
            android:translationX="4dp"
            android:translationY="4dp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@id/img_alumno_avatar"
            app:layout_constraintEnd_toEndOf="@id/img_alumno_avatar" />

        <LinearLayout
            android:id="@+id/layout_info_header"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:orientation="vertical"
            app:layout_constraintStart_toEndOf="@id/img_alumno_avatar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/img_alumno_avatar"
            app:layout_constraintBottom_toBottomOf="@id/img_alumno_avatar">

            <TextView
                android:id="@+id/text_alumno_nombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Juan Pérez"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/colorTextPrimary"
                android:ellipsize="end"
                android:maxLines="1" />

            <TextView
                android:id="@+id/text_ultima_actividad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Última actividad: Hoy"
                android:textSize="13sp"
                android:textColor="@color/colorTextSecondary"
                android:layout_marginTop="2dp"/>
        </LinearLayout>

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#F0F0F0"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/img_alumno_avatar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/divider">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="8dp"
                android:paddingHorizontal="12dp"
                android:background="@drawable/bg_badge_rounded"
                android:backgroundTint="#E8F5E9"
                android:layout_marginEnd="8dp">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_checkbox_checked"
                    app:tint="#2E7D32" />

                <TextView
                    android:id="@+id/text_completados"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2 Completados"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#2E7D32"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="8dp"
                android:paddingHorizontal="12dp"
                android:background="@drawable/bg_badge_rounded"
                android:backgroundTint="#FFF3E0">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/reloj"
                    app:tint="#EF6C00" />

                <TextView
                    android:id="@+id/text_pendientes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1 Pendiente"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#EF6C00"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>