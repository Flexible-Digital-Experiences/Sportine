<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#FAFAFA">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="120dp">

        <!-- ==================== HEADER ==================== -->

        <!-- BotÃ³n Volver -->
        <ImageButton
            android:id="@+id/btn_volver"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/ic_arrow_back"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Volver"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:tint="#1A1A1A" />

        <!-- Foto de Perfil -->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_foto_perfil"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="60dp"
            android:src="@drawable/ic_perfil"
            app:civ_border_width="3dp"
            app:civ_border_color="#E5E7EB"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Nombre del Alumno -->
        <TextView
            android:id="@+id/text_nombre_alumno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Juan Pablo RodrÃ­guez"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#1A1A1A"
            app:layout_constraintTop_toBottomOf="@id/img_foto_perfil"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Info de RelaciÃ³n -->
        <LinearLayout
            android:id="@+id/layout_info_relacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/text_nombre_alumno"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/text_dias_juntos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="324 dÃ­as juntos"
                android:textSize="13sp"
                android:textColor="#6B7280" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" â€¢ "
                android:textSize="13sp"
                android:textColor="#6B7280" />

            <TextView
                android:id="@+id/text_entrenamientos_juntos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="42 entrenamientos"
                android:textSize="13sp"
                android:textColor="#6B7280" />
        </LinearLayout>

        <!-- ==================== CONTENIDO ==================== -->

        <LinearLayout
            android:id="@+id/layout_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="24dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            app:layout_constraintTop_toBottomOf="@id/layout_info_relacion"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- SecciÃ³n: Resumen General -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Resumen General"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#1A1A1A" />

            <!-- Grid de Cards 2x2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginTop="16dp"
                android:baselineAligned="false">

                <!-- Card: Total -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total"
                            android:textSize="14sp"
                            android:textColor="#6B7280" />

                        <TextView
                            android:id="@+id/text_total_entrenamientos"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="32sp"
                            android:textStyle="bold"
                            android:textColor="#1A1A1A"
                            android:layout_marginTop="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Entrenamientos"
                            android:textSize="12sp"
                            android:textColor="#9CA3AF" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Card: Racha -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ”¥ Racha"
                            android:textSize="14sp"
                            android:textColor="#6B7280" />

                        <TextView
                            android:id="@+id/text_racha_actual"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0 dÃ­as"
                            android:textSize="32sp"
                            android:textStyle="bold"
                            android:textColor="#F59E0B"
                            android:layout_marginTop="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Consecutivos"
                            android:textSize="12sp"
                            android:textColor="#9CA3AF" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <!-- Segunda fila -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginTop="16dp"
                android:baselineAligned="false">

                <!-- Card: Este Mes -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Este Mes"
                            android:textSize="14sp"
                            android:textColor="#6B7280" />

                        <TextView
                            android:id="@+id/text_entrenamientos_mes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="32sp"
                            android:textStyle="bold"
                            android:textColor="#10B981"
                            android:layout_marginTop="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Completados"
                            android:textSize="12sp"
                            android:textColor="#9CA3AF" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Card: Tendencia -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tendencia"
                            android:textSize="14sp"
                            android:textColor="#6B7280" />

                        <TextView
                            android:id="@+id/text_tendencia"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="â†’ Estable"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#6B7280"
                            android:layout_marginTop="8dp"
                            android:gravity="center" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <!-- SecciÃ³n: Frecuencia -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="Frecuencia de Entrenamientos"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#1A1A1A" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/chart_frecuencia"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:padding="16dp" />
            </com.google.android.material.card.MaterialCardView>

            <!-- SecciÃ³n: DistribuciÃ³n por Deporte -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="DistribuciÃ³n por Deporte"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#1A1A1A" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/chart_deportes"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:padding="16dp" />
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <!-- ==================== LOADING STATE ==================== -->

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:indeterminate="true"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- ==================== ERROR STATE ==================== -->

        <LinearLayout
            android:id="@+id/layout_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="32dp"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="âŒ"
                android:textSize="64sp" />

            <TextView
                android:id="@+id/text_error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Error al cargar datos"
                android:textSize="16sp"
                android:textColor="#6B7280"
                android:gravity="center" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>