<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/nav_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Header con flecha y título -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp">

                <ImageView
                    android:id="@+id/btnBack"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_flechaatras"
                    android:contentDescription="Volver"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="EDITAR TARJETA"
                    android:textColor="#000"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.05"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>

            <!-- Sección: Datos actuales -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Datos actuales"
                android:textColor="#666"
                android:textSize="13sp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp"/>

            <!-- Separador superior -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginBottom="16dp"/>

            <!-- Grid de campos actuales -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="24dp">

                <!-- Fila 1: Número de tarjeta y Dirección de Facturación -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginEnd="16dp">

                        <TextView
                            android:id="@+id/tvNumeroTarjetaActual"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Número de tarjeta"
                            android:textSize="13sp"
                            android:textColorHint="#999"
                            android:textColor="#666"
                            android:background="@null"
                            android:paddingBottom="6dp"
                            android:inputType="number"
                            android:enabled="false"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#000"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvDireccionActual"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Dirección de Facturación"
                            android:textSize="13sp"
                            android:textColorHint="#999"
                            android:textColor="#666"
                            android:background="@null"
                            android:paddingBottom="6dp"
                            android:enabled="false"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#000"/>
                    </LinearLayout>
                </LinearLayout>

                <!-- Fila 2: Fecha de caducidad y Localidad -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginEnd="16dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/tvFechaCaducidadActual"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Fecha de caducidad"
                                android:textSize="13sp"
                                android:textColorHint="#999"
                                android:textColor="#666"
                                android:background="@null"
                                android:paddingBottom="6dp"
                                android:inputType="date"
                                android:enabled="false"/>

                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:src="@drawable/ic_calendario"
                                android:contentDescription="Calendario"/>
                        </RelativeLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#000"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvLocalidadActual"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Localidad"
                            android:textSize="13sp"
                            android:textColorHint="#999"
                            android:textColor="#666"
                            android:background="@null"
                            android:paddingBottom="6dp"
                            android:enabled="false"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#000"/>
                    </LinearLayout>
                </LinearLayout>

                <!-- Fila 3: Nombre del titular y Código postal -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginEnd="16dp">

                        <TextView
                            android:id="@+id/tvNombreTitularActual"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Nombre del titular"
                            android:textSize="13sp"
                            android:textColorHint="#999"
                            android:textColor="#666"
                            android:background="@null"
                            android:paddingBottom="6dp"
                            android:inputType="textPersonName"
                            android:enabled="false"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#000"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvCodigoPostalActual"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Código postal"
                            android:textSize="13sp"
                            android:textColorHint="#999"
                            android:textColor="#666"
                            android:background="@null"
                            android:paddingBottom="6dp"
                            android:inputType="number"
                            android:enabled="false"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#000"/>
                    </LinearLayout>
                </LinearLayout>

                <!-- Fila 4: Apellidos del titular y País -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginEnd="16dp">

                        <TextView
                            android:id="@+id/tvApellidosTitularActual"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Apellidos del titular"
                            android:textSize="13sp"
                            android:textColorHint="#999"
                            android:textColor="#666"
                            android:background="@null"
                            android:paddingBottom="6dp"
                            android:inputType="textPersonName"
                            android:enabled="false"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#000"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvPaisActual"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Pais"
                            android:textSize="13sp"
                            android:textColorHint="#999"
                            android:textColor="#666"
                            android:background="@null"
                            android:paddingBottom="6dp"
                            android:enabled="false"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#000"/>
                    </LinearLayout>
                </LinearLayout>

                <!-- Fila 5: Teléfono -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginEnd="16dp">

                        <TextView
                            android:id="@+id/tvTelefonoActual"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Teléfono"
                            android:textSize="13sp"
                            android:textColorHint="#999"
                            android:textColor="#666"
                            android:background="@null"
                            android:paddingBottom="6dp"
                            android:inputType="phone"
                            android:enabled="false"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#000"/>
                    </LinearLayout>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Separador central -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginBottom="16dp"/>

            <!-- Sección: Nuevos Datos -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nuevos Datos"
                android:textColor="#666"
                android:textSize="13sp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Si no quieres cambiar un campo"
                android:textColor="#000"
                android:textSize="11sp"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="déjalo vacío"
                android:textColor="#000"
                android:textSize="11sp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp"/>

            <!-- Grid de campos nuevos -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="24dp">

                <!-- Fila 1: Número de tarjeta y Dirección de Facturación -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginEnd="16dp">

                        <EditText
                            android:id="@+id/etNumeroTarjetaNuevo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Número de tarjeta"
                            android:textSize="13sp"
                            android:textColorHint="#999"
                            android:textColor="#666"
                            android:background="@null"
                            android:paddingBottom="6dp"
                            android:inputType="number"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#000"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/etDireccionNuevo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Dirección de Facturación"
                            android:textSize="13sp"
                            android:textColorHint="#999"
                            android:textColor="#666"
                            android:background="@null"
                            android:paddingBottom="6dp"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#000"/>
                    </LinearLayout>
                </LinearLayout>

                <!-- Fila 2: Fecha de caducidad y Localidad -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginEnd="16dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/etFechaCaducidadNuevo"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Fecha de caducidad"
                                android:textSize="13sp"
                                android:textColorHint="#999"
                                android:textColor="#666"
                                android:background="@null"
                                android:paddingBottom="6dp"
                                android:inputType="date"
                                android:focusable="false"
                                android:clickable="true"/>

                            <ImageView
                                android:id="@+id/btnCalendario"
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:src="@drawable/ic_calendario"
                                android:contentDescription="Calendario"/>
                        </RelativeLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#000"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/etLocalidadNuevo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Localidad"
                            android:textSize="13sp"
                            android:textColorHint="#999"
                            android:textColor="#666"
                            android:background="@null"
                            android:paddingBottom="6dp"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#000"/>
                    </LinearLayout>
                </LinearLayout>

                <!-- Fila 3: Nombre del titular y Código postal -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginEnd="16dp">

                        <EditText
                            android:id="@+id/etNombreTitularNuevo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Nombre del titular"
                            android:textSize="13sp"
                            android:textColorHint="#999"
                            android:textColor="#666"
                            android:background="@null"
                            android:paddingBottom="6dp"
                            android:inputType="textPersonName"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#000"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/etCodigoPostalNuevo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Código postal"
                            android:textSize="13sp"
                            android:textColorHint="#999"
                            android:textColor="#666"
                            android:background="@null"
                            android:paddingBottom="6dp"
                            android:inputType="number"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#000"/>
                    </LinearLayout>
                </LinearLayout>

                <!-- Fila 4: Apellidos del titular y País -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginEnd="16dp">

                        <EditText
                            android:id="@+id/etApellidosTitularNuevo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Apellidos del titular"
                            android:textSize="13sp"
                            android:textColorHint="#999"
                            android:textColor="#666"
                            android:background="@null"
                            android:paddingBottom="6dp"
                            android:inputType="textPersonName"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#000"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <Spinner
                            android:id="@+id/spinnerPaisNuevo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="30dp"
                            android:paddingBottom="6dp"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#000"/>
                    </LinearLayout>
                </LinearLayout>

                <!-- Fila 5: Teléfono -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginEnd="16dp">

                        <EditText
                            android:id="@+id/etTelefonoNuevo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Teléfono"
                            android:textSize="13sp"
                            android:textColorHint="#999"
                            android:textColor="#666"
                            android:background="@null"
                            android:paddingBottom="6dp"
                            android:inputType="phone"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#000"/>
                    </LinearLayout>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Botón Actualizar -->
            <Button
                android:id="@+id/btnActualizar"
                android:layout_width="180dp"
                android:layout_height="45dp"
                android:text="Actualizar"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                android:backgroundTint="#7B1FA2"
                android:textAllCaps="false"
                android:layout_gravity="center_horizontal"/>

        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation View -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/nav_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?android:attr/windowBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>