<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Header con flecha y título -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp">

                <ImageView
                    android:id="@+id/btnBack"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_flechaatras"
                    android:contentDescription="Volver"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_centerInParent="true"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="EDITAR DATOS DE"
                        android:textColor="#000"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:letterSpacing="0.05"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="REGISTRO"
                        android:textColor="#000"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:letterSpacing="0.05"/>
                </LinearLayout>
            </RelativeLayout>

            <!-- Sección: Datos actuales -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Datos actuales"
                android:textColor="#666"
                android:textSize="13sp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp"/>

            <!-- Separador superior -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginBottom="16dp"/>

            <!-- Grid de campos actuales -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="24dp">

                <!-- Fila 1: Nombre y Sexo -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginEnd="16dp">

                        <EditText
                            android:id="@+id/etNombreActual"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Nombre"
                            android:textSize="13sp"
                            android:textColorHint="#999"
                            android:textColor="#666"
                            android:background="@null"
                            android:paddingBottom="6dp"
                            android:enabled="false"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#000"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/etSexoActual"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Sexo"
                            android:textSize="13sp"
                            android:textColorHint="#999"
                            android:textColor="#666"
                            android:background="@null"
                            android:paddingBottom="6dp"
                            android:enabled="false"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#000"/>
                    </LinearLayout>
                </LinearLayout>

                <!-- Fila 2: Apellido y Estado -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginEnd="16dp">

                        <EditText
                            android:id="@+id/etApellidoActual"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Apellido"
                            android:textSize="13sp"
                            android:textColorHint="#999"
                            android:textColor="#666"
                            android:background="@null"
                            android:paddingBottom="6dp"
                            android:enabled="false"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#000"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/etEstadoActual"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Estado"
                            android:textSize="13sp"
                            android:textColorHint="#999"
                            android:textColor="#666"
                            android:background="@null"
                            android:paddingBottom="6dp"
                            android:enabled="false"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#000"/>
                    </LinearLayout>
                </LinearLayout>

                <!-- Fila 3: Nombre de Usuario y Ciudad -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginEnd="16dp">

                        <EditText
                            android:id="@+id/etUsernameActual"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Nombre de Usuario"
                            android:textSize="13sp"
                            android:textColorHint="#999"
                            android:textColor="#666"
                            android:background="@null"
                            android:paddingBottom="6dp"
                            android:enabled="false"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#000"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/etCiudadActual"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Ciudad"
                            android:textSize="13sp"
                            android:textColorHint="#999"
                            android:textColor="#666"
                            android:background="@null"
                            android:paddingBottom="6dp"
                            android:enabled="false"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#000"/>
                    </LinearLayout>
                </LinearLayout>

                <!-- Fila 4: Contraseña -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginEnd="16dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/etPasswordActual"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Contraseña"
                                android:textSize="13sp"
                                android:textColorHint="#999"
                                android:textColor="#666"
                                android:background="@null"
                                android:paddingBottom="6dp"
                                android:inputType="textPassword"
                                android:enabled="false"/>

                            <ImageView
                                android:id="@+id/btnTogglePasswordActual"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:src="@drawable/ic_ojover"
                                android:contentDescription="Mostrar/Ocultar"/>
                        </RelativeLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#000"/>
                    </LinearLayout>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Separador central -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginBottom="16dp"/>

            <!-- Sección: Nuevos Datos -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nuevos Datos"
                android:textColor="#666"
                android:textSize="13sp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Si no quieres cambiar un campo"
                android:textColor="#000"
                android:textSize="11sp"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="déjalo vacío"
                android:textColor="#000"
                android:textSize="11sp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp"/>

            <!-- Grid de campos nuevos -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="24dp">

                <!-- Fila 1: Nombre nuevo y Sexo -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginEnd="16dp">

                        <EditText
                            android:id="@+id/etNombreNuevo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Nombre nuevo"
                            android:textSize="13sp"
                            android:textColorHint="#999"
                            android:textColor="#666"
                            android:background="@null"
                            android:paddingBottom="6dp"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#000"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <Spinner
                            android:id="@+id/spinnerSexoNuevo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="30dp"
                            android:paddingBottom="6dp"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#000"/>
                    </LinearLayout>
                </LinearLayout>

                <!-- Fila 2: Apellido nuevo y Estado -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginEnd="16dp">

                        <EditText
                            android:id="@+id/etApellidoNuevo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Apellido nuevo"
                            android:textSize="13sp"
                            android:textColorHint="#999"
                            android:textColor="#666"
                            android:background="@null"
                            android:paddingBottom="6dp"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#000"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <Spinner
                            android:id="@+id/spinnerEstadoNuevo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="30dp"
                            android:paddingBottom="6dp"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#000"/>
                    </LinearLayout>
                </LinearLayout>

                <!-- Fila 3: Nombre de Usuario nuevo y Ciudad -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginEnd="16dp">

                        <EditText
                            android:id="@+id/etUsernameNuevo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Nombre de Usuario nuevo"
                            android:textSize="13sp"
                            android:textColorHint="#999"
                            android:textColor="#666"
                            android:background="@null"
                            android:paddingBottom="6dp"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#000"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <Spinner
                            android:id="@+id/spinnerCiudadNuevo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="30dp"
                            android:paddingBottom="6dp"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#000"/>
                    </LinearLayout>
                </LinearLayout>

                <!-- Fila 4: Contraseña nueva -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginEnd="16dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/etPasswordNuevo"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Contraseña nueva"
                                android:textSize="13sp"
                                android:textColorHint="#999"
                                android:textColor="#666"
                                android:background="@null"
                                android:paddingBottom="6dp"
                                android:inputType="textPassword"/>

                            <ImageView
                                android:id="@+id/btnTogglePasswordNuevo"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:src="@drawable/ic_ojover"
                                android:contentDescription="Mostrar/Ocultar"/>
                        </RelativeLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#000"/>
                    </LinearLayout>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Botón Actualizar -->
            <Button
                android:id="@+id/btnActualizar"
                android:layout_width="180dp"
                android:layout_height="45dp"
                android:text="Actualizar"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                android:backgroundTint="#1976D2"
                android:textAllCaps="false"
                android:layout_gravity="center_horizontal"/>

        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation View -->


</androidx.constraintlayout.widget.ConstraintLayout>