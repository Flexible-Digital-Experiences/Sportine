<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.sportine.ui.usuarios.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_alumno_home" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.sportine.ui.usuarios.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_alumno_notifications" />

    <fragment
        android:id="@+id/navigation_stats"
        android:name="com.example.sportine.ui.usuarios.estadisticas.EstadisticasFragment"
        android:label="Estadisticas"
        tools:layout="@layout/fragment_alumno_estadisticas" />

    <fragment
        android:id="@+id/navigation_perfil"
        android:name="com.example.sportine.ui.usuarios.perfil.PerfilFragment"
        android:label="Perfil"
        tools:layout="@layout/fragment_alumno_perfil" >
        <action
            android:id="@+id/action_perfil_to_configuracion"
            app:destination="@id/navigation_configuracion"
            app:enterAnim="@android:anim/slide_in_left"
            app:exitAnim="@android:anim/slide_out_right"
            app:popEnterAnim="@android:anim/slide_in_left"
            app:popExitAnim="@android:anim/slide_out_right"/>
        <action
            android:id="@+id/action_perfil_to_completar_datos"
            app:destination="@id/navigation_completar_datos_usuario" />

    </fragment>
    <fragment
        android:id="@+id/navigation_configuracion"
        android:name="com.example.sportine.ui.usuarios.configuracion.ConfiguracionFragment"
        android:label="Configuración"
        tools:layout="@layout/fragment_alumno_configuracion">

        <action
            android:id="@+id/action_configuracion_to_modificar"
            app:destination="@id/navigation_modificar_datos"/>

        <action
            android:id="@+id/action_configuracion_to_editar_tarjeta"
            app:destination="@id/navigation_editar_tarjeta"/>

        <action
            android:id="@+id/action_configuracion_to_agregar_pago"
            app:destination="@id/navigation_agregar_forma_pago"/>
    </fragment>

    <fragment
        android:id="@+id/navigation_modificar_datos"
        android:name="com.example.sportine.ui.usuarios.modificardatosalumno.ModificarDatosAlumnoFragment"
        android:label="Modificar Datos"
        tools:layout="@layout/fragment_alumno_modificar_datos"/>

    <fragment
        android:id="@+id/navigation_editar_tarjeta"
        android:name="com.example.sportine.ui.usuarios.editartarjeta.EditarTarjetaFragment"
        android:label="Editar Tarjeta"
        tools:layout="@layout/fragment_alumno_editar_tarjeta">
    </fragment> <fragment
    android:id="@+id/navigation_agregar_forma_pago"
    android:name="com.example.sportine.ui.usuarios.agregarformapago.AgregarformapagoFragment"
    android:label="Agregar Forma de Pago"
    tools:layout="@layout/fragment_alumno_agregar_forma_pago"/>
    <fragment
        android:id="@+id/navigation_completar_datos_usuario"
        android:name="com.example.sportine.ui.usuarios.completardatosusuario.CompletardatosusuarioFragment"
        android:label="Completar Datos"
        tools:layout="@layout/fragment_alumno_completar_datos" />


    <fragment
        android:id="@+id/navigation_social"
        android:name="com.example.sportine.ui.usuarios.social.SocialFragment"
        android:label="@string/title_social"
        tools:layout="@layout/fragment_alumno_social" >

        <action
            android:id="@+id/action_social_to_create_post"
            app:destination="@id/navigation_create_post"
            app:enterAnim="@anim/slide_in_up"
            app:exitAnim="@anim/slide_out_down"/>

        <action
            android:id="@+id/action_social_to_buscar_amigo"
            app:destination="@id/navigation_buscar_amigo"
            app:enterAnim="@anim/slide_in_up"
            app:exitAnim="@anim/slide_out_down"/>
    </fragment>

    <fragment
        android:id="@+id/navigation_create_post"
        android:name="com.example.sportine.ui.usuarios.social.CreatePostFragment"
        android:label="Crear Publicación"
        tools:layout="@layout/fragment_alumno_create_post" />

    <fragment
        android:id="@+id/navigation_buscar_amigo"
        android:name="com.example.sportine.ui.usuarios.social.BuscarAmigoFragment"
        android:label="Buscar Amigo"
        tools:layout="@layout/fragment_alumno_buscar_amigo" />
</navigation>